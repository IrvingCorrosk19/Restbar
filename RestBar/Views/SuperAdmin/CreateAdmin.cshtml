@model RestBar.Models.User
@{
    ViewData["Title"] = "Crear Administrador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-primary">
                        <i class="fas fa-user-plus me-2"></i>
                        Crear Nuevo Administrador
                    </h1>
                    <p class="text-muted mb-0">Registra un nuevo administrador en el sistema</p>
                </div>
                <div>
                    <a href="@Url.Action("Index", "SuperAdmin")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Volver
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Formulario -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-users-cog me-2"></i>
                        Informaci칩n del Administrador
                    </h6>
                </div>
                <div class="card-body">
                    <form asp-action="CreateAdmin" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="row">
                            <!-- Nombre Completo -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label">
                                    <i class="fas fa-user me-1"></i>
                                    Nombre Completo *
                                </label>
                                <input asp-for="FullName" class="form-control" placeholder="Ej: Juan P칠rez" required />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">
                                    <i class="fas fa-envelope me-1"></i>
                                    Email *
                                </label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="admin@sucursal.com" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <div class="form-text">Este ser치 el usuario para iniciar sesi칩n</div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Compa침칤a -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    <i class="fas fa-building me-1"></i>
                                    Compa침칤a *
                                </label>
                                <select id="companySelect" name="companyId" class="form-select" required>
                                    <option value="">Selecciona una compa침칤a</option>
                                    @if (ViewBag.Companies != null)
                                    {
                                        @foreach (var company in (List<RestBar.Models.Company>)ViewBag.Companies)
                                        {
                                            <option value="@company.Id" data-branches="@company.Branches.Count">@company.Name</option>
                                        }
                                    }
                                </select>
                                <div class="form-text">Selecciona la compa침칤a del administrador</div>
                            </div>

                            <!-- Sucursal -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="BranchId" class="form-label">
                                    <i class="fas fa-store me-1"></i>
                                    Sucursal *
                                </label>
                                <select asp-for="BranchId" id="branchSelect" class="form-select" required disabled>
                                    <option value="">Primero selecciona una compa침칤a</option>
                                </select>
                                <span asp-validation-for="BranchId" class="text-danger"></span>
                                <div class="form-text">Selecciona la sucursal espec칤fica</div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Contrase침a -->
                            <div class="col-md-6 mb-3">
                                <label for="password" class="form-label">
                                    <i class="fas fa-lock me-1"></i>
                                    Contrase침a *
                                </label>
                                <input type="password" id="password" name="password" class="form-control" placeholder="M칤nimo 8 caracteres" required minlength="8" />
                                <div class="form-text">M칤nimo 8 caracteres</div>
                            </div>

                            <!-- Confirmar Contrase침a -->
                            <div class="col-md-6 mb-3">
                                <label for="confirmPassword" class="form-label">
                                    <i class="fas fa-lock me-1"></i>
                                    Confirmar Contrase침a *
                                </label>
                                <input type="password" id="confirmPassword" class="form-control" placeholder="Repite la contrase침a" required />
                                <div class="form-text">Debe coincidir con la contrase침a</div>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="row">
                            <div class="col-12">
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <a href="@Url.Action("Index", "SuperAdmin")" class="btn btn-secondary">
                                        <i class="fas fa-times me-1"></i>
                                        Cancelar
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-1"></i>
                                        Crear Administrador
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Panel de Ayuda -->
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Informaci칩n Importante
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="fas fa-lightbulb me-1"></i>
                            Consejos
                        </h6>
                        <ul class="mb-0">
                            <li>El email debe ser 칰nico en el sistema</li>
                            <li>La contrase침a debe tener al menos 8 caracteres</li>
                            <li>El administrador tendr치 acceso completo a su sucursal</li>
                            <li>Puedes cambiar la contrase침a despu칠s de crear el usuario</li>
                        </ul>
                    </div>

                    <div class="alert alert-warning">
                        <h6 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-1"></i>
                            Permisos
                        </h6>
                        <p class="mb-0">
                            Los administradores tendr치n acceso completo a su sucursal asignada, incluyendo gesti칩n de usuarios, productos, 칩rdenes y reportes.
                        </p>
                    </div>

                    <div class="alert alert-success">
                        <h6 class="alert-heading">
                            <i class="fas fa-check-circle me-1"></i>
                            Pr칩ximos Pasos
                        </h6>
                        <p class="mb-0">
                            Despu칠s de crear el administrador, podr치s asignar roles adicionales y configurar permisos espec칤ficos.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const companySelect = document.getElementById('companySelect');
            const branchSelect = document.getElementById('branchSelect');
            const passwordInput = document.getElementById('password');
            const confirmPasswordInput = document.getElementById('confirmPassword');
            const form = document.querySelector('form');

            // Cargar sucursales cuando se selecciona una compa침칤a
            companySelect.addEventListener('change', function() {
                const companyId = this.value;
                const branchSelectElement = document.getElementById('branchSelect');
                
                if (companyId) {
                    // Habilitar el select de sucursales
                    branchSelectElement.disabled = false;
                    branchSelectElement.innerHTML = '<option value="">Cargando sucursales...</option>';
                    
                    // Hacer llamada AJAX para obtener las sucursales
                    fetch(`@Url.Action("GetBranchesByCompany", "SuperAdmin")?companyId=${companyId}`)
                        .then(response => response.json())
                        .then(data => {
                            branchSelectElement.innerHTML = '<option value="">Selecciona una sucursal</option>';
                            
                            if (data && data.length > 0) {
                                data.forEach(branch => {
                                    const option = document.createElement('option');
                                    option.value = branch.id;
                                    option.textContent = branch.name;
                                    branchSelectElement.appendChild(option);
                                });
                            } else {
                                branchSelectElement.innerHTML = '<option value="">No hay sucursales disponibles</option>';
                                Swal.fire({
                                    icon: 'warning',
                                    title: 'Sin Sucursales',
                                    text: 'Esta compa침칤a no tiene sucursales activas. Debes crear una sucursal primero.',
                                    confirmButtonText: 'Entendido'
                                });
                            }
                        })
                        .catch(error => {
                            console.error('Error al cargar sucursales:', error);
                            branchSelectElement.innerHTML = '<option value="">Error al cargar sucursales</option>';
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'Error al cargar las sucursales. Intenta nuevamente.',
                                confirmButtonText: 'Entendido'
                            });
                        });
                } else {
                    branchSelectElement.disabled = true;
                    branchSelectElement.innerHTML = '<option value="">Primero selecciona una compa침칤a</option>';
                }
            });

            // Validaci칩n de contrase침as
            function validatePasswords() {
                const password = passwordInput.value;
                const confirmPassword = confirmPasswordInput.value;
                
                if (confirmPassword && password !== confirmPassword) {
                    confirmPasswordInput.setCustomValidity('Las contrase침as no coinciden');
                    confirmPasswordInput.classList.add('is-invalid');
                } else {
                    confirmPasswordInput.setCustomValidity('');
                    confirmPasswordInput.classList.remove('is-invalid');
                    if (confirmPassword) {
                        confirmPasswordInput.classList.add('is-valid');
                    }
                }
            }

            passwordInput.addEventListener('input', validatePasswords);
            confirmPasswordInput.addEventListener('input', validatePasswords);

            // Validaci칩n en tiempo real
            const inputs = [document.querySelector('input[name="FullName"]'), document.querySelector('input[name="Email"]')];
            
            inputs.forEach(input => {
                input.addEventListener('blur', function() {
                    if (this.value.trim().length < 2) {
                        this.classList.add('is-invalid');
                    } else {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    }
                });
            });

            // Validaci칩n del formulario antes de enviar
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                let isValid = true;
                let errorMessages = [];

                // Validar campos obligatorios
                const requiredFields = [
                    { element: document.querySelector('input[name="FullName"]'), message: 'El nombre es obligatorio' },
                    { element: document.querySelector('input[name="Email"]'), message: 'El email es obligatorio' },
                    { element: companySelect, message: 'Debes seleccionar una compa침칤a' },
                    { element: branchSelect, message: 'Debes seleccionar una sucursal' },
                    { element: passwordInput, message: 'La contrase침a es obligatoria' },
                    { element: confirmPasswordInput, message: 'Debes confirmar la contrase침a' }
                ];

                requiredFields.forEach(field => {
                    if (!field.element.value.trim()) {
                        field.element.classList.add('is-invalid');
                        errorMessages.push(field.message);
                        isValid = false;
                    } else {
                        field.element.classList.remove('is-invalid');
                    }
                });

                // Validar email
                const emailInput = document.querySelector('input[name="Email"]');
                const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
                if (emailInput.value && !emailRegex.test(emailInput.value)) {
                    emailInput.classList.add('is-invalid');
                    errorMessages.push('El formato del email no es v치lido');
                    isValid = false;
                }

                // Validar contrase침as
                if (passwordInput.value !== confirmPasswordInput.value) {
                    confirmPasswordInput.classList.add('is-invalid');
                    errorMessages.push('Las contrase침as no coinciden');
                    isValid = false;
                }

                // Validar longitud de contrase침a
                if (passwordInput.value.length < 8) {
                    passwordInput.classList.add('is-invalid');
                    errorMessages.push('La contrase침a debe tener al menos 8 caracteres');
                    isValid = false;
                }

                if (!isValid) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error de Validaci칩n',
                        html: '<ul style="text-align: left;"><li>' + errorMessages.join('</li><li>') + '</li></ul>',
                        confirmButtonText: 'Entendido'
                    });
                    return;
                }

                // Mostrar confirmaci칩n
                Swal.fire({
                    title: '쮺rear Administrador?',
                    text: `쮼st치s seguro de crear el administrador "${document.querySelector('input[name="FullName"]').value}"?`,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'S칤, crear',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Mostrar loading
                        Swal.fire({
                            title: 'Creando...',
                            text: 'Por favor espera mientras se crea el administrador',
                            allowOutsideClick: false,
                            didOpen: () => {
                                Swal.showLoading();
                            }
                        });

                        // Enviar formulario
                        console.log('游댌 [CreateAdmin] Enviando formulario...');
                        form.requestSubmit();
                    }
                });
            });

            // Verificar si hay compa침칤as disponibles
            const companies = @Html.Raw(Json.Serialize(ViewBag.Companies));
            if (!companies || companies.length === 0) {
                // Deshabilitar el formulario si no hay compa침칤as
                form.querySelectorAll('input, select, button').forEach(element => {
                    element.disabled = true;
                });
                
                // Mostrar mensaje con SweetAlert
                Swal.fire({
                    icon: 'warning',
                    title: 'Sin Compa침칤as',
                    text: 'No hay compa침칤as disponibles. Debes crear una compa침칤a y sucursal primero.',
                    confirmButtonText: 'Entendido'
                }).then(() => {
                    window.location.href = '@Url.Action("CreateCompany", "SuperAdmin")';
                });
            }
        });
    </script>
}
