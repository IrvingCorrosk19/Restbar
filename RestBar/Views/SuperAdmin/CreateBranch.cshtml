@model RestBar.Models.Branch
@{
    ViewData["Title"] = "Crear Sucursal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-primary">
                        <i class="fas fa-plus me-2"></i>
                        Crear Nueva Sucursal
                    </h1>
                    <p class="text-muted mb-0">Registra una nueva sucursal en el sistema</p>
                </div>
                <div>
                    <a href="@Url.Action("Branches", "SuperAdmin")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Volver a Lista
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Formulario -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-store me-2"></i>
                        Información de la Sucursal
                    </h6>
                </div>
                <div class="card-body">
                    <form asp-action="CreateBranch" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="row">
                            <!-- Compañía -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="CompanyId" class="form-label">
                                    <i class="fas fa-building me-1"></i>
                                    Compañía *
                                </label>
                                <select asp-for="CompanyId" class="form-select" required>
                                    <option value="">Selecciona una compañía</option>
                                    @if (ViewBag.Companies != null)
                                    {
                                        @foreach (var company in (List<RestBar.Models.Company>)ViewBag.Companies)
                                        {
                                            <option value="@company.Id">@company.Name</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="CompanyId" class="text-danger"></span>
                            </div>

                            <!-- Nombre de la Sucursal -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">
                                    <i class="fas fa-store me-1"></i>
                                    Nombre de la Sucursal *
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="Ej: Sucursal Centro" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Teléfono -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label">
                                    <i class="fas fa-phone me-1"></i>
                                    Teléfono
                                </label>
                                <input asp-for="Phone" class="form-control" placeholder="Ej: +507 1234-5678" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <!-- Estado -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="IsActive" class="form-label">
                                    <i class="fas fa-toggle-on me-1"></i>
                                    Estado
                                </label>
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                    <label class="form-check-label" for="IsActive">
                                        Sucursal Activa
                                    </label>
                                </div>
                                <div class="form-text">Las sucursales inactivas no pueden recibir órdenes</div>
                            </div>
                        </div>

                        <!-- Dirección -->
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                Dirección
                            </label>
                            <textarea asp-for="Address" class="form-control" rows="3" placeholder="Dirección completa de la sucursal"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <!-- Botones -->
                        <div class="row">
                            <div class="col-12">
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <a href="@Url.Action("Branches", "SuperAdmin")" class="btn btn-secondary">
                                        <i class="fas fa-times me-1"></i>
                                        Cancelar
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-1"></i>
                                        Crear Sucursal
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Panel de Ayuda -->
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Información Importante
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="fas fa-lightbulb me-1"></i>
                            Consejos
                        </h6>
                        <ul class="mb-0">
                            <li>Debes seleccionar una compañía existente</li>
                            <li>El nombre de la sucursal debe ser único por compañía</li>
                            <li>Puedes asignar administradores después de crear la sucursal</li>
                            <li>Las sucursales inactivas no pueden recibir órdenes</li>
                        </ul>
                    </div>

                    <div class="alert alert-warning">
                        <h6 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-1"></i>
                            Importante
                        </h6>
                        <p class="mb-0">
                            Una vez creada la sucursal, podrás asignar administradores y configurar áreas y estaciones.
                        </p>
                    </div>

                    @if (ViewBag.Companies == null || ((List<RestBar.Models.Company>)ViewBag.Companies).Count == 0)
                    {
                        <div class="alert alert-danger">
                            <h6 class="alert-heading">
                                <i class="fas fa-exclamation-circle me-1"></i>
                                Acción Requerida
                            </h6>
                            <p class="mb-2">No hay compañías disponibles.</p>
                            <a href="@Url.Action("CreateCompany", "SuperAdmin")" class="btn btn-danger btn-sm">
                                <i class="fas fa-plus me-1"></i>
                                Crear Compañía
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Validación en tiempo real del formulario
            const form = document.querySelector('form');
            const companySelect = document.querySelector('select[name="CompanyId"]');
            const nameInput = document.querySelector('input[name="Name"]');
            const phoneInput = document.querySelector('input[name="Phone"]');

            // Validar compañía
            companySelect.addEventListener('change', function() {
                if (this.value) {
                    this.classList.remove('is-invalid');
                    this.classList.add('is-valid');
                } else {
                    this.classList.remove('is-valid');
                }
            });

            // Validar nombre
            nameInput.addEventListener('blur', function() {
                if (this.value.trim().length < 2) {
                    this.classList.add('is-invalid');
                } else {
                    this.classList.remove('is-invalid');
                    this.classList.add('is-valid');
                }
            });

            // Validación del formulario antes de enviar
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                let isValid = true;
                let errorMessages = [];

                // Validar compañía
                if (!companySelect.value) {
                    companySelect.classList.add('is-invalid');
                    errorMessages.push('Debes seleccionar una compañía');
                    isValid = false;
                }

                // Validar nombre
                if (!nameInput.value.trim()) {
                    nameInput.classList.add('is-invalid');
                    errorMessages.push('El nombre de la sucursal es obligatorio');
                    isValid = false;
                }

                if (!isValid) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error de Validación',
                        html: '<ul style="text-align: left;"><li>' + errorMessages.join('</li><li>') + '</li></ul>',
                        confirmButtonText: 'Entendido'
                    });
                    return;
                }

                // Mostrar confirmación
                Swal.fire({
                    title: '¿Crear Sucursal?',
                    text: `¿Estás seguro de crear la sucursal "${nameInput.value}"?`,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Sí, crear',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Mostrar loading
                        Swal.fire({
                            title: 'Creando...',
                            text: 'Por favor espera mientras se crea la sucursal',
                            allowOutsideClick: false,
                            didOpen: () => {
                                Swal.showLoading();
                            }
                        });

                        // Enviar formulario
                        form.submit();
                    }
                });
            });

            // Auto-formatear teléfono
            phoneInput.addEventListener('input', function() {
                let value = this.value.replace(/\D/g, '');
                if (value.length > 0) {
                    if (value.length <= 3) {
                        value = value;
                    } else if (value.length <= 6) {
                        value = value.slice(0, 3) + '-' + value.slice(3);
                    } else {
                        value = value.slice(0, 3) + '-' + value.slice(3, 6) + '-' + value.slice(6, 10);
                    }
                }
                this.value = value;
            });

            // Verificar si hay compañías disponibles
            const companies = @Html.Raw(Json.Serialize(ViewBag.Companies));
            if (!companies || companies.length === 0) {
                // Deshabilitar el formulario si no hay compañías
                form.querySelectorAll('input, select, textarea, button').forEach(element => {
                    element.disabled = true;
                });
                
                // Mostrar mensaje
                const alertDiv = document.createElement('div');
                alertDiv.className = 'alert alert-warning';
                alertDiv.innerHTML = '<i class="fas fa-exclamation-triangle me-2"></i>No hay compañías disponibles. Debes crear una compañía primero.';
                form.insertBefore(alertDiv, form.firstChild);
            }
        });
    </script>
}
