@model RestBar.Models.Company
@{
    ViewData["Title"] = "Crear Compañía";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-primary">
                        <i class="fas fa-plus me-2"></i>
                        Crear Nueva Compañía
                    </h1>
                    <p class="text-muted mb-0">Registra una nueva compañía en el sistema</p>
                </div>
                <div>
                    <a href="@Url.Action("Companies", "SuperAdmin")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Volver a Lista
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Formulario -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-building me-2"></i>
                        Información de la Compañía
                    </h6>
                </div>
                <div class="card-body">
                    <form asp-action="CreateCompany" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="row">
                            <!-- Nombre de la Compañía -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">
                                    <i class="fas fa-building me-1"></i>
                                    Nombre de la Compañía *
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="Ej: Restaurante El Buen Sabor" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <!-- ID Legal -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="LegalId" class="form-label">
                                    <i class="fas fa-id-card me-1"></i>
                                    ID Legal / RUC
                                </label>
                                <input asp-for="LegalId" class="form-control" placeholder="Ej: 12345678901" />
                                <span asp-validation-for="LegalId" class="text-danger"></span>
                                <div class="form-text">Identificación fiscal de la compañía</div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Tax ID -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="TaxId" class="form-label">
                                    <i class="fas fa-receipt me-1"></i>
                                    Tax ID
                                </label>
                                <input asp-for="TaxId" class="form-control" placeholder="Ej: 123456789" />
                                <span asp-validation-for="TaxId" class="text-danger"></span>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">
                                    <i class="fas fa-envelope me-1"></i>
                                    Email de Contacto
                                </label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="contacto@empresa.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Teléfono -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label">
                                    <i class="fas fa-phone me-1"></i>
                                    Teléfono
                                </label>
                                <input asp-for="Phone" class="form-control" placeholder="Ej: +507 1234-5678" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <!-- Estado -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="IsActive" class="form-label">
                                    <i class="fas fa-toggle-on me-1"></i>
                                    Estado
                                </label>
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                    <label class="form-check-label" for="IsActive">
                                        Compañía Activa
                                    </label>
                                </div>
                                <div class="form-text">Las compañías inactivas no pueden crear nuevas sucursales</div>
                            </div>
                        </div>

                        <!-- Dirección -->
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                Dirección
                            </label>
                            <textarea asp-for="Address" class="form-control" rows="3" placeholder="Dirección completa de la compañía"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <!-- Botones -->
                        <div class="row">
                            <div class="col-12">
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <a href="@Url.Action("Companies", "SuperAdmin")" class="btn btn-secondary">
                                        <i class="fas fa-times me-1"></i>
                                        Cancelar
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-1"></i>
                                        Crear Compañía
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Panel de Ayuda -->
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Información Importante
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="fas fa-lightbulb me-1"></i>
                            Consejos
                        </h6>
                        <ul class="mb-0">
                            <li>El nombre de la compañía es obligatorio</li>
                            <li>El ID Legal debe ser único en el sistema</li>
                            <li>Puedes crear sucursales después de crear la compañía</li>
                            <li>Las compañías inactivas no pueden crear nuevas sucursales</li>
                        </ul>
                    </div>

                    <div class="alert alert-warning">
                        <h6 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-1"></i>
                            Importante
                        </h6>
                        <p class="mb-0">
                            Una vez creada la compañía, podrás asignar administradores y crear sucursales para ella.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Validación en tiempo real del formulario
            const form = document.querySelector('form');
            const nameInput = document.querySelector('input[name="Name"]');
            const legalIdInput = document.querySelector('input[name="LegalId"]');
            const emailInput = document.querySelector('input[name="Email"]');

            // Validar nombre
            nameInput.addEventListener('blur', function() {
                if (this.value.trim().length < 2) {
                    this.classList.add('is-invalid');
                } else {
                    this.classList.remove('is-invalid');
                    this.classList.add('is-valid');
                }
            });

            // Validar email
            emailInput.addEventListener('blur', function() {
                const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
                if (this.value && !emailRegex.test(this.value)) {
                    this.classList.add('is-invalid');
                } else {
                    this.classList.remove('is-invalid');
                    if (this.value) {
                        this.classList.add('is-valid');
                    }
                }
            });

            // Validación del formulario antes de enviar
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                let isValid = true;
                let errorMessages = [];

                // Validar nombre
                if (!nameInput.value.trim()) {
                    nameInput.classList.add('is-invalid');
                    errorMessages.push('El nombre de la compañía es obligatorio');
                    isValid = false;
                }

                // Validar email si se proporciona
                if (emailInput.value) {
                    const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
                    if (!emailRegex.test(emailInput.value)) {
                        emailInput.classList.add('is-invalid');
                        errorMessages.push('El formato del email no es válido');
                        isValid = false;
                    }
                }

                if (!isValid) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error de Validación',
                        html: '<ul style="text-align: left;"><li>' + errorMessages.join('</li><li>') + '</li></ul>',
                        confirmButtonText: 'Entendido'
                    });
                    return;
                }

                // Mostrar confirmación
                Swal.fire({
                    title: '¿Crear Compañía?',
                    text: `¿Estás seguro de crear la compañía "${nameInput.value}"?`,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Sí, crear',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Mostrar loading
                        Swal.fire({
                            title: 'Creando...',
                            text: 'Por favor espera mientras se crea la compañía',
                            allowOutsideClick: false,
                            didOpen: () => {
                                Swal.showLoading();
                            }
                        });

                        // Enviar formulario
                        form.submit();
                    }
                });
            });

            // Auto-formatear teléfono
            const phoneInput = document.querySelector('input[name="Phone"]');
            phoneInput.addEventListener('input', function() {
                let value = this.value.replace(/\D/g, '');
                if (value.length > 0) {
                    if (value.length <= 3) {
                        value = value;
                    } else if (value.length <= 6) {
                        value = value.slice(0, 3) + '-' + value.slice(3);
                    } else {
                        value = value.slice(0, 3) + '-' + value.slice(3, 6) + '-' + value.slice(6, 10);
                    }
                }
                this.value = value;
            });
        });
    </script>
}
