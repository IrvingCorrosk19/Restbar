@model RestBar.Models.Branch
@{
    ViewData["Title"] = "Editar Sucursal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-primary">
                        <i class="fas fa-edit me-2"></i>
                        Editar Sucursal
                    </h1>
                    <p class="text-muted mb-0">Modifica la información de la sucursal</p>
                </div>
                <div>
                    <a href="@Url.Action("Branches", "SuperAdmin")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Volver a Lista
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Mensajes -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Formulario -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-store me-2"></i>
                        Información de la Sucursal
                    </h6>
                </div>
                <div class="card-body">
                    <form asp-action="EditBranch" method="post">
                        @Html.AntiForgeryToken()
                        <input asp-for="Id" type="hidden" />
                        
                        <div class="row">
                            <!-- Compañía -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="CompanyId" class="form-label">
                                    <i class="fas fa-building me-1"></i>
                                    Compañía *
                                </label>
                                <select asp-for="CompanyId" class="form-select" required>
                                    <option value="">Selecciona una compañía</option>
                                    @if (ViewBag.Companies != null)
                                    {
                                        @foreach (var company in (List<RestBar.Models.Company>)ViewBag.Companies)
                                        {
                                            <option value="@company.Id" selected="@(company.Id == Model.CompanyId)">@company.Name</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="CompanyId" class="text-danger"></span>
                            </div>

                            <!-- Nombre de la Sucursal -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">
                                    <i class="fas fa-store me-1"></i>
                                    Nombre de la Sucursal *
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="Ej: Sucursal Centro" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Teléfono -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label">
                                    <i class="fas fa-phone me-1"></i>
                                    Teléfono
                                </label>
                                <input asp-for="Phone" class="form-control" placeholder="Ej: +507 1234-5678" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <!-- Estado -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="IsActive" class="form-label">
                                    <i class="fas fa-toggle-on me-1"></i>
                                    Estado
                                </label>
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                    <label class="form-check-label" for="IsActive">
                                        Sucursal Activa
                                    </label>
                                </div>
                                <div class="form-text">Las sucursales inactivas no pueden recibir órdenes</div>
                            </div>
                        </div>

                        <!-- Dirección -->
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                Dirección
                            </label>
                            <textarea asp-for="Address" class="form-control" rows="3" placeholder="Dirección completa de la sucursal"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <!-- Botones -->
                        <div class="row">
                            <div class="col-12">
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <a href="@Url.Action("Branches", "SuperAdmin")" class="btn btn-secondary">
                                        <i class="fas fa-times me-1"></i>
                                        Cancelar
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-1"></i>
                                        Actualizar Sucursal
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Panel de Ayuda -->
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Información Importante
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="fas fa-lightbulb me-1"></i>
                            Consejos
                        </h6>
                        <ul class="mb-0">
                            <li>Debes seleccionar una compañía existente</li>
                            <li>El nombre de la sucursal debe ser único por compañía</li>
                            <li>Al desactivar una sucursal, no podrá recibir órdenes</li>
                            <li>Los cambios se aplicarán inmediatamente</li>
                        </ul>
                    </div>

                    <div class="alert alert-warning">
                        <h6 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-1"></i>
                            Importante
                        </h6>
                        <p class="mb-0">
                            Ten cuidado al cambiar la compañía de una sucursal, ya que esto puede afectar a los usuarios asignados y las órdenes existentes.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Validación en tiempo real del formulario
            const form = document.querySelector('form');
            const companySelect = document.querySelector('select[name="CompanyId"]');
            const nameInput = document.querySelector('input[name="Name"]');
            const phoneInput = document.querySelector('input[name="Phone"]');

            // Validar compañía
            companySelect.addEventListener('change', function() {
                if (this.value) {
                    this.classList.remove('is-invalid');
                    this.classList.add('is-valid');
                } else {
                    this.classList.remove('is-valid');
                }
            });

            // Validar nombre
            nameInput.addEventListener('blur', function() {
                if (this.value.trim().length < 2) {
                    this.classList.add('is-invalid');
                } else {
                    this.classList.remove('is-invalid');
                    this.classList.add('is-valid');
                }
            });

            // Validación del formulario antes de enviar
            form.addEventListener('submit', function(e) {
                let isValid = true;

                // Validar compañía
                if (!companySelect.value) {
                    companySelect.classList.add('is-invalid');
                    isValid = false;
                }

                // Validar nombre
                if (!nameInput.value.trim()) {
                    nameInput.classList.add('is-invalid');
                    isValid = false;
                }

                if (!isValid) {
                    e.preventDefault();
                    alert('Por favor, completa todos los campos obligatorios');
                } else {
                    // Mostrar indicador de carga
                    const button = form.querySelector('button[type="submit"]');
                    button.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Actualizando...';
                    button.disabled = true;
                }
            });

            // Auto-formatear teléfono
            phoneInput.addEventListener('input', function() {
                let value = this.value.replace(/\D/g, '');
                if (value.length > 0) {
                    if (value.length <= 3) {
                        value = value;
                    } else if (value.length <= 6) {
                        value = value.slice(0, 3) + '-' + value.slice(3);
                    } else {
                        value = value.slice(0, 3) + '-' + value.slice(3, 6) + '-' + value.slice(6, 10);
                    }
                }
                this.value = value;
            });

            // Auto-hide alerts después de 5 segundos
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    if (alert.parentNode) {
                        alert.remove();
                    }
                }, 5000);
            });
        });
    </script>
}
