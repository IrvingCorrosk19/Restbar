@{
    ViewData["Title"] = "Reportes Avanzados";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="fas fa-chart-line text-primary me-2"></i>
                Reportes Avanzados
            </h1>
            <p class="text-muted">Análisis detallado y métricas avanzadas del sistema</p>
        </div>
        <div>
            <button class="btn btn-outline-secondary" onclick="window.history.back()">
                <i class="fas fa-arrow-left me-2"></i>Volver
            </button>
        </div>
    </div>

    <!-- Filtros Generales -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-filter me-2"></i>Filtros de Fecha
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <label for="startDate" class="form-label">Fecha Inicio</label>
                            <input type="date" class="form-control" id="startDate" value="@DateTime.Now.AddDays(-30).ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-4">
                            <label for="endDate" class="form-label">Fecha Fin</label>
                            <input type="date" class="form-control" id="endDate" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button class="btn btn-primary w-100" onclick="applyFilters()">
                                <i class="fas fa-search me-2"></i>Aplicar Filtros
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Estadísticas Generales -->
    <div class="row mb-4" id="statisticsCards">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Análisis de Inventario
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="inventoryStats">Cargando...</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-boxes fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Análisis de Proveedores
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="supplierStats">Cargando...</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-truck fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Análisis de Rentabilidad
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="profitabilityStats">Cargando...</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Análisis de Tendencias
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="trendsStats">Cargando...</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cards de Reportes -->
    <div class="row" id="reportCards">
        <!-- Análisis de Inventario -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow h-100 report-card" data-report="inventory">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-primary text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-boxes me-2"></i>Análisis de Inventario
                    </h6>
                    <button class="btn btn-sm btn-light" onclick="loadReport('inventory')">
                        <i class="fas fa-sync"></i>
                    </button>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p class="text-muted small">Análisis completo del inventario incluyendo:</p>
                        <ul class="list-unstyled small">
                            <li><i class="fas fa-check text-success me-2"></i>Alertas de bajo stock</li>
                            <li><i class="fas fa-check text-success me-2"></i>Rotación de inventario</li>
                            <li><i class="fas fa-check text-success me-2"></i>Valor del inventario</li>
                            <li><i class="fas fa-check text-success me-2"></i>Eficiencia de stock</li>
                        </ul>
                    </div>
                    <div id="inventoryReportContent" class="mb-3"></div>
                    <div class="d-flex gap-2">
                        <a href="@Url.Action("InventoryAnalysis", "AdvancedReports")" class="btn btn-primary btn-sm flex-fill">
                            <i class="fas fa-chart-bar me-2"></i>Ver Detalles
                        </a>
                        <button class="btn btn-outline-primary btn-sm" onclick="exportReport('inventory', 'pdf')">
                            <i class="fas fa-file-pdf"></i>
                        </button>
                        <button class="btn btn-outline-success btn-sm" onclick="exportReport('inventory', 'excel')">
                            <i class="fas fa-file-excel"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Análisis de Rentabilidad -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow h-100 report-card" data-report="profitability">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-info text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-dollar-sign me-2"></i>Análisis de Rentabilidad
                    </h6>
                    <button class="btn btn-sm btn-light" onclick="loadReport('profitability')">
                        <i class="fas fa-sync"></i>
                    </button>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p class="text-muted small">Análisis financiero detallado:</p>
                        <ul class="list-unstyled small">
                            <li><i class="fas fa-check text-success me-2"></i>Margenes por producto</li>
                            <li><i class="fas fa-check text-success me-2"></i>Rentabilidad por categoría</li>
                            <li><i class="fas fa-check text-success me-2"></i>Análisis de costos</li>
                            <li><i class="fas fa-check text-success me-2"></i>ROI por inversión</li>
                        </ul>
                    </div>
                    <div id="profitabilityReportContent" class="mb-3"></div>
                    <div class="d-flex gap-2">
                        <a href="@Url.Action("ProfitabilityAnalysis", "AdvancedReports")" class="btn btn-info btn-sm flex-fill">
                            <i class="fas fa-chart-area me-2"></i>Ver Detalles
                        </a>
                        <button class="btn btn-outline-primary btn-sm" onclick="exportReport('profitability', 'pdf')">
                            <i class="fas fa-file-pdf"></i>
                        </button>
                        <button class="btn btn-outline-success btn-sm" onclick="exportReport('profitability', 'excel')">
                            <i class="fas fa-file-excel"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Análisis de Ventas -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow h-100 report-card" data-report="sales">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-success text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-chart-pie me-2"></i>Análisis de Ventas
                    </h6>
                    <button class="btn btn-sm btn-light" onclick="loadReport('sales')">
                        <i class="fas fa-sync"></i>
                    </button>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p class="text-muted small">Análisis completo de ventas:</p>
                        <ul class="list-unstyled small">
                            <li><i class="fas fa-check text-success me-2"></i>Productos más vendidos</li>
                            <li><i class="fas fa-check text-success me-2"></i>Categorías más vendidas</li>
                            <li><i class="fas fa-check text-success me-2"></i>Tendencias por hora</li>
                            <li><i class="fas fa-check text-success me-2"></i>Análisis diario/semanal</li>
                        </ul>
                    </div>
                    <div id="salesReportContent" class="mb-3"></div>
                    <div class="d-flex gap-2">
                        <a href="@Url.Action("SalesAnalysis", "AdvancedReports")" class="btn btn-success btn-sm flex-fill">
                            <i class="fas fa-chart-line me-2"></i>Ver Detalles
                        </a>
                        <button class="btn btn-outline-primary btn-sm" onclick="exportReport('sales', 'pdf')">
                            <i class="fas fa-file-pdf"></i>
                        </button>
                        <button class="btn btn-outline-success btn-sm" onclick="exportReport('sales', 'excel')">
                            <i class="fas fa-file-excel"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Análisis de Clientes -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow h-100 report-card" data-report="customers">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-warning text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-users me-2"></i>Análisis de Clientes
                    </h6>
                    <button class="btn btn-sm btn-light" onclick="loadReport('customers')">
                        <i class="fas fa-sync"></i>
                    </button>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p class="text-muted small">Análisis de comportamiento de clientes:</p>
                        <ul class="list-unstyled small">
                            <li><i class="fas fa-check text-success me-2"></i>Clientes principales</li>
                            <li><i class="fas fa-check text-success me-2"></i>Segmentación</li>
                            <li><i class="fas fa-check text-success me-2"></i>Retención y fidelidad</li>
                            <li><i class="fas fa-check text-success me-2"></i>Valor de vida del cliente</li>
                        </ul>
                    </div>
                    <div id="customersReportContent" class="mb-3"></div>
                    <div class="d-flex gap-2">
                        <a href="@Url.Action("CustomerAnalysis", "AdvancedReports")" class="btn btn-warning btn-sm flex-fill">
                            <i class="fas fa-user-chart me-2"></i>Ver Detalles
                        </a>
                        <button class="btn btn-outline-primary btn-sm" onclick="exportReport('customers', 'pdf')">
                            <i class="fas fa-file-pdf"></i>
                        </button>
                        <button class="btn btn-outline-success btn-sm" onclick="exportReport('customers', 'excel')">
                            <i class="fas fa-file-excel"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Análisis de Operaciones -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow h-100 report-card" data-report="operational">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-secondary text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-cogs me-2"></i>Análisis Operacional
                    </h6>
                    <button class="btn btn-sm btn-light" onclick="loadReport('operational')">
                        <i class="fas fa-sync"></i>
                    </button>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p class="text-muted small">Análisis de eficiencia operativa:</p>
                        <ul class="list-unstyled small">
                            <li><i class="fas fa-check text-success me-2"></i>Rendimiento de estaciones</li>
                            <li><i class="fas fa-check text-success me-2"></i>Utilización de mesas</li>
                            <li><i class="fas fa-check text-success me-2"></i>Horas pico</li>
                            <li><i class="fas fa-check text-success me-2"></i>Tiempos de preparación</li>
                        </ul>
                    </div>
                    <div id="operationalReportContent" class="mb-3"></div>
                    <div class="d-flex gap-2">
                        <a href="@Url.Action("OperationalAnalysis", "AdvancedReports")" class="btn btn-secondary btn-sm flex-fill">
                            <i class="fas fa-chart-bar me-2"></i>Ver Detalles
                        </a>
                        <button class="btn btn-outline-primary btn-sm" onclick="exportReport('operational', 'pdf')">
                            <i class="fas fa-file-pdf"></i>
                        </button>
                        <button class="btn btn-outline-success btn-sm" onclick="exportReport('operational', 'excel')">
                            <i class="fas fa-file-excel"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Análisis de Tendencias -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow h-100 report-card" data-report="trends">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-dark text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-chart-line me-2"></i>Análisis de Tendencias
                    </h6>
                    <button class="btn btn-sm btn-light" onclick="loadReport('trends')">
                        <i class="fas fa-sync"></i>
                    </button>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p class="text-muted small">Análisis de patrones y crecimiento:</p>
                        <ul class="list-unstyled small">
                            <li><i class="fas fa-check text-success me-2"></i>Tendencias estacionales</li>
                            <li><i class="fas fa-check text-success me-2"></i>Análisis de crecimiento</li>
                            <li><i class="fas fa-check text-success me-2"></i>Predicciones de ventas</li>
                            <li><i class="fas fa-check text-success me-2"></i>Patrones de comportamiento</li>
                        </ul>
                    </div>
                    <div id="trendsReportContent" class="mb-3"></div>
                    <div class="d-flex gap-2">
                        <a href="@Url.Action("TrendAnalysis", "AdvancedReports")" class="btn btn-dark btn-sm flex-fill">
                            <i class="fas fa-chart-line me-2"></i>Ver Detalles
                        </a>
                        <button class="btn btn-outline-primary btn-sm" onclick="exportReport('trends', 'pdf')">
                            <i class="fas fa-file-pdf"></i>
                        </button>
                        <button class="btn btn-outline-success btn-sm" onclick="exportReport('trends', 'excel')">
                            <i class="fas fa-file-excel"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Reporte de Auditoría -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow h-100 report-card" data-report="audit">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-shield-alt me-2"></i>Reporte de Auditoría
                    </h6>
                    <button class="btn btn-sm btn-light" onclick="loadReport('audit')">
                        <i class="fas fa-sync"></i>
                    </button>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p class="text-muted small">Seguimiento de actividades del sistema:</p>
                        <ul class="list-unstyled small">
                            <li><i class="fas fa-check text-success me-2"></i>Actividad de usuarios</li>
                            <li><i class="fas fa-check text-success me-2"></i>Logs del sistema</li>
                            <li><i class="fas fa-check text-success me-2"></i>Eventos de seguridad</li>
                            <li><i class="fas fa-check text-success me-2"></i>Traza de cambios</li>
                        </ul>
                    </div>
                    <div id="auditReportContent" class="mb-3"></div>
                    <div class="d-flex gap-2">
                        <a href="@Url.Action("AuditReport", "AdvancedReports")" class="btn btn-sm flex-fill" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                            <i class="fas fa-clipboard-list me-2"></i>Ver Reporte
                        </a>
                        <button class="btn btn-outline-primary btn-sm" onclick="exportReport('audit', 'pdf')">
                            <i class="fas fa-file-pdf"></i>
                        </button>
                        <button class="btn btn-outline-success btn-sm" onclick="exportReport('audit', 'excel')">
                            <i class="fas fa-file-excel"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Salud del Sistema -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow h-100 report-card" data-report="health">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-danger text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-heartbeat me-2"></i>Salud del Sistema
                    </h6>
                    <button class="btn btn-sm btn-light" onclick="loadReport('health')">
                        <i class="fas fa-sync"></i>
                    </button>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p class="text-muted small">Monitoreo del estado del sistema:</p>
                        <ul class="list-unstyled small">
                            <li><i class="fas fa-check text-success me-2"></i>Estado general del sistema</li>
                            <li><i class="fas fa-check text-success me-2"></i>Métricas de rendimiento</li>
                            <li><i class="fas fa-check text-success me-2"></i>Alertas de sistema</li>
                            <li><i class="fas fa-check text-success me-2"></i>Uptime y disponibilidad</li>
                        </ul>
                    </div>
                    <div id="healthReportContent" class="mb-3"></div>
                    <div class="d-flex gap-2">
                        <a href="@Url.Action("SystemHealth", "AdvancedReports")" class="btn btn-danger btn-sm flex-fill">
                            <i class="fas fa-tachometer-alt me-2"></i>Ver Estado
                        </a>
                        <button class="btn btn-outline-primary btn-sm" onclick="exportReport('health', 'pdf')">
                            <i class="fas fa-file-pdf"></i>
                        </button>
                        <button class="btn btn-outline-success btn-sm" onclick="exportReport('health', 'excel')">
                            <i class="fas fa-file-excel"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/advanced-reports.js"></script>
    <style>
        .report-card {
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .report-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
        .border-left-primary {
            border-left: 0.25rem solid #4e73df !important;
        }
        .border-left-success {
            border-left: 0.25rem solid #1cc88a !important;
        }
        .border-left-info {
            border-left: 0.25rem solid #36b9cc !important;
        }
        .border-left-warning {
            border-left: 0.25rem solid #f6c23e !important;
        }
        .text-xs {
            font-size: 0.7rem;
        }
    </style>
}
