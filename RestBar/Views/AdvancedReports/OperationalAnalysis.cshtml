@{
    ViewData["Title"] = "Análisis Operacional";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-cogs text-secondary"></i> Análisis Operacional
        </h1>
        <div>
            <button class="btn btn-success" onclick="exportToExcel()">
                <i class="fas fa-file-excel"></i> Exportar a Excel
            </button>
            <button class="btn btn-danger" onclick="exportToPdf()">
                <i class="fas fa-file-pdf"></i> Exportar a PDF
            </button>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Filtros</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <label>Fecha Inicio:</label>
                    <input type="date" id="startDate" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label>Fecha Fin:</label>
                    <input type="date" id="endDate" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label>&nbsp;</label>
                    <button class="btn btn-primary btn-block" onclick="loadOperationalAnalysis()">
                        <i class="fas fa-search"></i> Generar Reporte
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Estadísticas Generales -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Estaciones
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalStations">0</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-fire fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Tasa de Utilización Mesas
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="tableUtilization">0%</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chair fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Tiempo Promedio Preparación
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="averagePrepTime">0 min</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Horas Pico
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="peakHours">-</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Rendimiento de Estaciones -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Rendimiento de Estaciones</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="stationPerformanceTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Estación</th>
                            <th>Órdenes Procesadas</th>
                            <th>Tiempo Promedio</th>
                            <th>Productos Preparados</th>
                            <th>Eficiencia</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody id="stationPerformanceTableBody">
                        <!-- Los datos se cargarán dinámicamente -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Utilización de Mesas -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Utilización de Mesas</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="tableUtilizationTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mesa</th>
                            <th>Área</th>
                            <th>Horas Ocupadas</th>
                            <th>Tasa de Utilización</th>
                            <th>Órdenes Totales</th>
                            <th>Ticket Promedio</th>
                        </tr>
                    </thead>
                    <tbody id="tableUtilizationTableBody">
                        <!-- Los datos se cargarán dinámicamente -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Análisis de Horas Pico -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Análisis de Horas Pico</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="peakHoursTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Hora</th>
                            <th>Órdenes</th>
                            <th>Mesas Ocupadas</th>
                            <th>Ventas Totales</th>
                            <th>Índice de Carga</th>
                        </tr>
                    </thead>
                    <tbody id="peakHoursTableBody">
                        <!-- Los datos se cargarán dinámicamente -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/advanced-reports/operational-analysis.js"></script>
}

