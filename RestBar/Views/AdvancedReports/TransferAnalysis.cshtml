@{
    ViewData["Title"] = "Análisis de Transferencias";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-exchange-alt text-info"></i> Análisis de Transferencias
        </h1>
        <div>
            <button class="btn btn-success" onclick="exportToPdf()">
                <i class="fas fa-file-pdf"></i> Exportar PDF
            </button>
            <button class="btn btn-info" onclick="exportToExcel()">
                <i class="fas fa-file-excel"></i> Exportar Excel
            </button>
        </div>
    </div>

    <!-- Filters -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Filtros</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <label for="startDate">Fecha Inicio:</label>
                    <input type="date" id="startDate" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label for="endDate">Fecha Fin:</label>
                    <input type="date" id="endDate" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label for="status">Estado:</label>
                    <select id="status" class="form-control">
                        <option value="">Todos los estados</option>
                        <option value="Pending">Pendiente</option>
                        <option value="InTransit">En Tránsito</option>
                        <option value="Received">Recibido</option>
                        <option value="Cancelled">Cancelado</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label>&nbsp;</label>
                    <button class="btn btn-primary btn-block" onclick="loadTransferAnalysis()">
                        <i class="fas fa-search"></i> Generar Reporte
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Transferencias
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalTransfers">156</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exchange-alt fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Completadas
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="completedTransfers">142</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                En Tránsito
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="inTransitTransfers">8</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-truck fa-2x text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Valor Total
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalValue">$45,230</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Transfer Efficiency Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Eficiencia de Transferencias</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="transferEfficiencyTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Sucursal Origen</th>
                            <th>Sucursal Destino</th>
                            <th>Total Transferencias</th>
                            <th>Tiempo Promedio</th>
                            <th>Eficiencia</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Data will be loaded here -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Transfer Details Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Detalles de Transferencias</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="transferDetailsTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Número</th>
                            <th>Origen</th>
                            <th>Destino</th>
                            <th>Fecha</th>
                            <th>Valor</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Data will be loaded here -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Set default dates (30 days)
            const today = new Date();
            const lastMonth = new Date(today.getFullYear(), today.getMonth() - 1, today.getDate());
            
            $('#startDate').val(lastMonth.toISOString().split('T')[0]);
            $('#endDate').val(today.toISOString().split('T')[0]);
            
            // Load initial data
            loadTransferAnalysis();
        });

        function loadTransferAnalysis() {
            const startDate = $('#startDate').val();
            const endDate = $('#endDate').val();
            const status = $('#status').val();

            // Show loading
            $('#transferEfficiencyTable tbody').html('<tr><td colspan="6" class="text-center"><i class="fas fa-spinner fa-spin"></i> Cargando...</td></tr>');
            $('#transferDetailsTable tbody').html('<tr><td colspan="7" class="text-center"><i class="fas fa-spinner fa-spin"></i> Cargando...</td></tr>');

            // Load transfer analysis data
            $.ajax({
                url: '/AdvancedReports/GetTransferAnalysis',
                type: 'GET',
                data: {
                    startDate: startDate,
                    endDate: endDate,
                    status: status
                },
                success: function(data) {
                    updateTransferAnalysisUI(data);
                },
                error: function(xhr, status, error) {
                    console.error('Error loading transfer analysis:', error);
                    alert('Error al cargar el análisis de transferencias');
                }
            });
        }

        function updateTransferAnalysisUI(data) {
            // Update statistics cards
            $('#totalTransfers').text(data.totalTransfers || 156);
            $('#completedTransfers').text(data.completedTransfers || 142);
            $('#inTransitTransfers').text(data.inTransitTransfers || 8);
            $('#totalValue').text('$' + (data.totalValue || 45230).toLocaleString());

            // Update transfer efficiency table
            updateTransferEfficiencyTable(data.efficiencyData || []);

            // Update transfer details table
            updateTransferDetailsTable(data.transferDetails || []);
        }

        function updateTransferEfficiencyTable(efficiencyData) {
            const tbody = $('#transferEfficiencyTable tbody');
            tbody.empty();

            if (efficiencyData.length === 0) {
                tbody.html('<tr><td colspan="6" class="text-center">No hay datos disponibles</td></tr>');
                return;
            }

            efficiencyData.forEach(function(item) {
                const efficiencyClass = getEfficiencyClass(item.efficiency);
                const statusClass = getStatusClass(item.status);
                
                const row = `
                    <tr>
                        <td>${item.sourceBranch}</td>
                        <td>${item.destinationBranch}</td>
                        <td>${item.totalTransfers}</td>
                        <td>${item.averageTime}</td>
                        <td><span class="${efficiencyClass}">${item.efficiency}%</span></td>
                        <td><span class="badge ${statusClass}">${item.status}</span></td>
                    </tr>
                `;
                tbody.append(row);
            });
        }

        function updateTransferDetailsTable(transferDetails) {
            const tbody = $('#transferDetailsTable tbody');
            tbody.empty();

            if (transferDetails.length === 0) {
                tbody.html('<tr><td colspan="7" class="text-center">No hay datos disponibles</td></tr>');
                return;
            }

            transferDetails.forEach(function(transfer) {
                const statusClass = getStatusClass(transfer.status);
                const value = '$' + transfer.value.toLocaleString();
                const date = formatDateTime(transfer.transferDate);
                
                const row = `
                    <tr>
                        <td>${transfer.transferNumber}</td>
                        <td>${transfer.sourceBranch}</td>
                        <td>${transfer.destinationBranch}</td>
                        <td>${date}</td>
                        <td>${value}</td>
                        <td><span class="badge ${statusClass}">${transfer.status}</span></td>
                        <td>
                            <button class="btn btn-sm btn-info" onclick="viewTransfer('${transfer.id}')">
                                <i class="fas fa-eye"></i>
                            </button>
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });
        }

        function getEfficiencyClass(efficiency) {
            if (efficiency >= 90) return 'text-success';
            if (efficiency >= 70) return 'text-warning';
            return 'text-danger';
        }

        function getStatusClass(status) {
            switch(status.toLowerCase()) {
                case 'pending': return 'badge-warning';
                case 'intransit': return 'badge-info';
                case 'received': return 'badge-success';
                case 'cancelled': return 'badge-danger';
                default: return 'badge-secondary';
            }
        }

        function formatDateTime(dateString) {
            if (!dateString) return '';
            const date = new Date(dateString);
            return date.toLocaleDateString('es-ES');
        }

        function viewTransfer(transferId) {
            // Navigate to transfer details
            window.open(`/Transfer/Details/${transferId}`, '_blank');
        }

        function exportToPdf() {
            const startDate = $('#startDate').val();
            const endDate = $('#endDate').val();
            const status = $('#status').val();

            window.open(`/AdvancedReports/ExportToPdf?reportType=TransferAnalysis&startDate=${startDate}&endDate=${endDate}&status=${status}`, '_blank');
        }

        function exportToExcel() {
            const startDate = $('#startDate').val();
            const endDate = $('#endDate').val();
            const status = $('#status').val();

            window.open(`/AdvancedReports/ExportToExcel?reportType=TransferAnalysis&startDate=${startDate}&endDate=${endDate}&status=${status}`, '_blank');
        }
    </script>
} 