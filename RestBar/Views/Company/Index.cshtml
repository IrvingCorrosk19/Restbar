    <div class="modal-dialog modal-lg">
        <div class="modal-content modern-modal">
            <div class="modal-header modern-modal-header">
                <div class="modal-title-section">
                    <div class="modal-icon">
                        <i class="fas fa-building"></i>
                    </div>
                    <div>
                        <h5 class="modal-title" id="modalCreateCompanyLabel">Nueva Compañía</h5>
                        <p class="modal-subtitle">Crea una nueva compañía en el sistema</p>
                    </div>
                </div>
                <button type="button" class="btn-close modern-btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="formCreateCompany">
                <div class="modal-body modern-modal-body">
                    <div class="row g-3">
                        <div class="col-md-12">
                            <div class="modern-form-group">
                                <label for="createName" class="form-label">
                                    <i class="fas fa-building me-2"></i>
                                    Nombre de la Compañía *
                                </label>
                                <input type="text" class="form-control modern-input" id="createName" name="Name" required 
                                       placeholder="Ingresa el nombre de la compañía">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label for="createLegalId" class="form-label">
                                    <i class="fas fa-id-card me-2"></i>
                                    Legal ID
                                </label>
                                <input type="text" class="form-control modern-input" id="createLegalId" name="LegalId" 
                                       placeholder="Número de identificación legal">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label for="createTaxId" class="form-label">
                                    <i class="fas fa-receipt me-2"></i>
                                    Tax ID
                                </label>
                                <input type="text" class="form-control modern-input" id="createTaxId" name="TaxId" 
                                       placeholder="Número de identificación fiscal">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="modern-form-group">
                                <label for="createAddress" class="form-label">
                                    <i class="fas fa-map-marker-alt me-2"></i>
                                    Dirección
                                </label>
                                <input type="text" class="form-control modern-input" id="createAddress" name="Address" 
                                       placeholder="Dirección completa de la compañía">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label for="createPhone" class="form-label">
                                    <i class="fas fa-phone me-2"></i>
                                    Teléfono
                                </label>
                                <input type="text" class="form-control modern-input" id="createPhone" name="Phone" 
                                       placeholder="Número de teléfono">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label for="createEmail" class="form-label">
                                    <i class="fas fa-envelope me-2"></i>
                                    Email
                                </label>
                                <input type="email" class="form-control modern-input" id="createEmail" name="Email" 
                                       placeholder="Correo electrónico">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer modern-modal-footer">
                    <button type="button" class="btn btn-outline-secondary modern-btn" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary modern-btn">
                        <i class="fas fa-save me-2"></i>
                        Crear Compañía
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

