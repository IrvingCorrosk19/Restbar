@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Función para limpiar filtros
        function clearFilters() {
            $("#searchName, #searchLegalId").val("");
            $(".company-card").show();
            updateEmptyState();
        }

        // Función para actualizar estado vacío
        function updateEmptyState() {
            const visibleCards = $(".company-card:visible").length;
            if (visibleCards === 0) {
                $("#emptyState").show();
            } else {
                $("#emptyState").hide();
            }
        }

        // Filtro por nombre y legalId
        $("#searchName, #searchLegalId").on("input", function () {
            var name = $("#searchName").val().toLowerCase();
            var legalId = $("#searchLegalId").val().toLowerCase();
            
            $(".company-card").each(function () {
                var cardName = $(this).data("name").toLowerCase();
                var cardLegalId = $(this).data("legalid").toLowerCase();
                var show = true;
                
                if (name && !cardName.includes(name)) show = false;
                if (legalId && !cardLegalId.includes(legalId)) show = false;
                
                $(this).toggle(show);
            });
            
            updateEmptyState();
        });

        // Crear compañía
        $("#formCreateCompany").on("submit", function (e) {
            e.preventDefault();
            
            var data = {
                Name: $("#createName").val(),
                LegalId: $("#createLegalId").val(),
                TaxId: $("#createTaxId").val(),
                Address: $("#createAddress").val(),
                Phone: $("#createPhone").val(),
                Email: $("#createEmail").val(),
                IsActive: true
            };
            
            Swal.fire({
                title: 'Creando compañía...',
                text: 'Por favor espera un momento',
                icon: 'info',
                allowOutsideClick: false,
                showConfirmButton: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });
            
            $.ajax({
                url: '/Company/Create',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function (res) {
                    if (res.success) {
                        Swal.fire({
                            icon: 'success',
                            title: '¡Éxito!',
                            text: '¡Compañía creada correctamente!',
                            showConfirmButton: false,
                            timer: 1500
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: res.message || 'No se pudo crear la compañía'
                        });
                    }
                },
                error: function (xhr, status, error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'No se pudo crear la compañía. Por favor intenta nuevamente.'
                    });
                }
            });
        });

        // Abrir modal de edición y cargar datos
        window.openEditModal = function (id) {
            $.get('/Company/Get', { id: id }, function (res) {
                if (res.success) {
                    var c = res.data;
                    $("#editId").val(c.id);
                    $("#editName").val(c.name);
                    $("#editLegalId").val(c.legalId);
                    $("#editTaxId").val(c.taxId);
                    $("#editAddress").val(c.address);
                    $("#editPhone").val(c.phone);
                    $("#editEmail").val(c.email);
                    $("#modalEditCompany").modal('show');
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: res.message || 'No se pudo cargar la información de la compañía'
                    });
                }
            }).fail(function() {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'No se pudo cargar la información de la compañía'
                });
            });
        };

        // Guardar cambios de edición
        $("#formEditCompany").on("submit", function (e) {
            e.preventDefault();
            
            var data = {
                Id: $("#editId").val(),
                Name: $("#editName").val(),
                LegalId: $("#editLegalId").val(),
                TaxId: $("#editTaxId").val(),
                Address: $("#editAddress").val(),
                Phone: $("#editPhone").val(),
                Email: $("#editEmail").val(),
                IsActive: true
            };
            
            Swal.fire({
                title: 'Guardando cambios...',
                text: 'Por favor espera un momento',
                icon: 'info',
                allowOutsideClick: false,
                showConfirmButton: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });
            
            $.ajax({
                url: '/Company/Edit?id=' + data.Id,
                type: 'PUT',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function (res) {
                    if (res.success) {
                        Swal.fire({
                            icon: 'success',
                            title: '¡Éxito!',
                            text: '¡Compañía editada correctamente!',
                            showConfirmButton: false,
                            timer: 1500
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: res.message || 'No se pudo editar la compañía'
                        });
                    }
                },
                error: function (xhr, status, error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'No se pudo editar la compañía. Por favor intenta nuevamente.'
                    });
                }
            });
        });

        // Eliminar compañía
        window.deleteCompany = function (id) {
            Swal.fire({
                title: '¿Estás seguro?',
                text: 'Esta acción eliminará la compañía permanentemente',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: 'var(--danger-color)',
                cancelButtonColor: 'var(--secondary-color)',
                confirmButtonText: '<i class="fas fa-trash me-2"></i>Sí, eliminar',
                cancelButtonText: '<i class="fas fa-times me-2"></i>Cancelar',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Eliminando compañía...',
                        text: 'Por favor espera un momento',
                        icon: 'info',
                        allowOutsideClick: false,
                        showConfirmButton: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });
                    
                    $.ajax({
                        url: '/Company/Delete?id=' + id,
                        type: 'DELETE',
                        success: function (res) {
                            if (res.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: '¡Eliminada!',
                                    text: '¡Compañía eliminada correctamente!',
                                    showConfirmButton: false,
                                    timer: 1500
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: res.message || 'No se pudo eliminar la compañía'
                                });
                            }
                        },
                        error: function (xhr, status, error) {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'No se pudo eliminar la compañía. Por favor intenta nuevamente.'
                            });
                        }
                    });
                }
            });
        };

        // Inicializar estado vacío al cargar
        $(document).ready(function() {
            updateEmptyState();
        });
    </script>
}

@section Styles {
    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #34495e;
            --accent-color: #e67e22;
            --success-color: #27ae60;
            --danger-color: #e74c3c;
            --warning-color: #f39c12;
            --info-color: #3498db;
            --light-color: #ecf0f1;
            --dark-color: #2c3e50;
            --border-radius: 20px;
            --transition: all 0.3s ease;
            --box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            --hover-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            line-height: 1.6;
        }

        /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            padding: 80px 0;
            position: relative;
            overflow: hidden;
        }

        .hero-content {
            container: 1200px;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
            z-index: 2;
        }

        .hero-text h1 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
        }

        .hero-icon {
            background: linear-gradient(45deg, var(--accent-color), var(--warning-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-right: 20px;
        }

        .hero-description {
            font-size: 1.2rem;
            opacity: 0.9;
            max-width: 600px;
        }

        .hero-actions {
            display: flex;
            gap: 15px;
        }

        .hero-decoration {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
        }

        .decoration-circle {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            animation: float 6s ease-in-out infinite;
        }

        .circle-1 {
            width: 100px;
            height: 100px;
            top: 10%;
            right: 10%;
            animation-delay: 0s;
        }

        .circle-2 {
            width: 150px;
            height: 150px;
            top: 60%;
            right: 5%;
            animation-delay: 2s;
        }

        .circle-3 {
            width: 80px;
