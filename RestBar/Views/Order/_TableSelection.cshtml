@{
    // Zona de selección de mesa
}

<div class="mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0 fw-bold" style="color: var(--accent-gold); text-shadow: 0 2px 4px rgba(0,0,0,0.3); font-size: 1.25rem;">
            <i class="fas fa-chair me-2"></i>
            Selecciona una mesa:
            <i class="fas fa-utensils ms-2"></i>
        </h5>
        <div class="d-flex gap-2 flex-wrap">
            <div class="btn-group" id="areaFilters">
                <button class="btn btn-outline-primary active" data-area="all">
                    <i class="fas fa-border-all me-1"></i>
                    Todas
                </button>
                <!-- Áreas cargadas dinámicamente -->
            </div>
            <div class="btn-group" id="statusFilters">
                <button class="btn btn-outline-primary active" data-status="all">
                    <i class="fas fa-list-ul me-1"></i>
                    Todos los estados
                </button>
                <!-- Estados cargados dinámicamente -->
            </div>
        </div>
    </div>
    <div class="d-flex flex-wrap gap-3" id="tables">
        <!-- Mesas cargadas dinámicamente -->
    </div>
</div> 