@{
    // Zona de selección de mesa
}

<div class="section-card">
    <div class="section-header">
        <h2 class="section-title">
            <i class="fas fa-table"></i> Selección de Mesa
        </h2>
    </div>
    <div class="section-body">
        <div class="table-filters">
            <div class="filter-group" id="areaFilters">
                <button class="filter-btn active" data-area="all">
                    <i class="fas fa-map-marked-alt"></i> Todas las Áreas
                </button>
                <!-- Áreas cargadas dinámicamente -->
            </div>
            <div class="filter-group" id="statusFilters">
                <button class="filter-btn active" data-status="all">
                    <i class="fas fa-filter"></i> Todos los Estados
                </button>
                <!-- Estados cargados dinámicamente -->
            </div>
        </div>
        <div class="tables-grid" id="tables">
            <!-- Mesas cargadas dinámicamente -->
        </div>
    </div>
</div> 