@{
    // Resumen del pedido
}

<div class="card resumen-card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
            <i class="fas fa-receipt me-2"></i>
            Resumen del Pedido
            <i class="fas fa-calculator ms-2"></i>
        </h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered align-middle order-items-table">
                <thead class="table-light">
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Precio Unit.</th>
                        <th>Total</th>
                        <th>Estado</th>
                        <th>Notas</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="orderItems">
                    <!-- Items de la orden cargados dinÃ¡micamente -->
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-3">
            <div class="order-summary-info">
                <!-- âœ… NUEVO: Desglose de impuestos -->
                <div class="tax-breakdown mb-2">
                    <div class="row">
                        <div class="col-md-3">
                            <small class="text-muted">Subtotal:</small>
                            <div class="fw-bold" id="orderSubtotal">$0.00</div>
                        </div>
                        <div class="col-md-3">
                            <small class="text-muted">IVA:</small>
                            <div class="fw-bold text-success" id="orderTax">$0.00</div>
                        </div>
                        <div class="col-md-3">
                            <small class="text-muted">Descuento:</small>
                            <div class="fw-bold text-danger" id="orderDiscount">$0.00</div>
                        </div>
                        <div class="col-md-3">
                            <small class="text-muted">Total:</small>
                            <div class="fw-bold text-primary" id="orderTotal">$0.00</div>
                        </div>
                    </div>
                </div>
                
                <small class="text-muted" id="itemCount">0 items</small>
                <div class="payment-info mt-2">
                    <small class="text-muted">
                        Pagado: <span id="totalPaid">$0.00</span> | 
                        Pendiente: <span id="remainingAmount">$0.00</span>
                    </small>
                </div>
            </div>
            <div class="order-controls">
                <button class="btn btn-warning me-2" id="clearOrderBtn">Vaciar</button>
                <button class="btn btn-danger me-2" id="cancelOrder" style="display: none;" data-permission="orders">Cancelar Orden</button>
                <button class="btn btn-info me-2" id="refreshOrderBtn" onclick="forceRefreshOrder()">ðŸ”„ Actualizar</button>
                <button class="btn btn-warning me-2" id="discountBtn" data-permission="orders">
                    <i class="fas fa-percentage"></i> Descuento
                </button>
                <button class="btn btn-primary me-2" id="partialPaymentBtn" onclick="showPaymentModal()" style="display: none;" data-permission="payments">
                    <i class="fas fa-credit-card"></i> Pago Parcial
                </button>
                <button class="btn btn-secondary me-2" id="paymentHistoryBtn" onclick="showPaymentHistoryModal()" style="display: none;" data-permission="payments">
                    <i class="fas fa-history"></i> Historial Pagos
                </button>
                <button class="btn btn-success" id="sendToKitchen" data-permission="orders">Agregar a Cocina</button>
                
                <!-- BotÃ³n solo para supervisores y administradores -->
                <button class="btn btn-warning me-2" id="priorityOrderBtn" style="display: none;" data-roles="admin,manager,supervisor">
                    <i class="fas fa-exclamation-triangle"></i> Prioridad
                </button>
                
                <!-- BotÃ³n solo para administradores -->
                <button class="btn btn-info me-2" id="adminOrderBtn" style="display: none;" data-role="admin">
                    <i class="fas fa-cog"></i> Config. Orden
                </button>
            </div>
        </div>
    </div>
</div> 

<!-- âœ… NUEVO: Modal para aplicar descuentos -->
<div class="modal fade" id="discountModal" tabindex="-1" aria-labelledby="discountModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="discountModalLabel">
                    <i class="fas fa-percentage me-2"></i>Aplicar Descuento
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Resumen actual -->
                <div class="alert alert-info mb-3">
                    <h6 class="mb-2"><i class="fas fa-calculator me-2"></i>Resumen Actual</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <small><strong>Subtotal:</strong> <span id="discountSubtotal">$0.00</span></small>
                        </div>
                        <div class="col-md-6">
                            <small><strong>IVA:</strong> <span id="discountTax">$0.00</span></small>
                        </div>
                    </div>
                    <div class="row mt-1">
                        <div class="col-md-6">
                            <small><strong>Total:</strong> <span id="discountTotal">$0.00</span></small>
                        </div>
                        <div class="col-md-6">
                            <small><strong>Descuento actual:</strong> <span id="discountCurrent">$0.00</span></small>
                        </div>
                    </div>
                </div>

                <!-- Formulario de descuento -->
                <form id="discountForm">
                    <div class="mb-3">
                        <label for="discountType" class="form-label">Tipo de Descuento</label>
                        <select class="form-control" id="discountType" onchange="toggleDiscountType()">
                            <option value="percentage">Porcentaje (%)</option>
                            <option value="amount">Monto Fijo ($)</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="discountValue" class="form-label">Valor del Descuento</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="discountValue" step="0.01" min="0" max="100" required />
                            <span class="input-group-text" id="discountUnit">%</span>
                        </div>
                        <small class="form-text text-muted">
                            <span id="discountHelp">Ingresa el porcentaje de descuento (0-100%)</span>
                        </small>
                    </div>

                    <div class="mb-3">
                        <label for="discountReason" class="form-label">Motivo del Descuento (Opcional)</label>
                        <textarea class="form-control" id="discountReason" rows="2" placeholder="Ej: Cliente frecuente, PromociÃ³n, etc."></textarea>
                    </div>

                    <!-- Vista previa del descuento -->
                    <div class="alert alert-warning" id="discountPreview" style="display: none;">
                        <h6 class="mb-2"><i class="fas fa-eye me-2"></i>Vista Previa</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <small><strong>Descuento:</strong> <span id="previewDiscount">$0.00</span></small>
                            </div>
                            <div class="col-md-6">
                                <small><strong>Total final:</strong> <span id="previewFinal">$0.00</span></small>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" onclick="removeDiscount()" id="removeDiscountBtn" style="display: none;">
                    <i class="fas fa-times"></i> Quitar Descuento
                </button>
                <button type="button" class="btn btn-warning" onclick="applyDiscount()">
                    <i class="fas fa-check"></i> Aplicar Descuento
                </button>
            </div>
        </div>
    </div>
</div> 