@model IEnumerable<RestBar.Models.Order>
@{
    Layout = "../Shared/_OrderLayout.cshtml";
    ViewData["Title"] = "Tomar Pedido";
}

<!-- Indicador de estado de conexi贸n SignalR -->
@await Html.PartialAsync("_SignalRStatus")

<!-- Zona de selecci贸n de mesa -->
@await Html.PartialAsync("_TableSelection")

<!-- Categor铆as -->
@await Html.PartialAsync("_Categories")

<!-- Zona de productos -->
@await Html.PartialAsync("_Products")

<!-- Resumen del pedido -->
@await Html.PartialAsync("_OrderSummary")

<!-- Modal para editar notas y cantidad -->
<div class="modal fade" id="editItemModal" tabindex="-1" aria-labelledby="editItemModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editItemModalLabel">
                    <i class="fas fa-edit"></i> Editar Producto
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editItemForm">
                    <input type="hidden" id="editItemId" />
                    <input type="hidden" id="editProductId" />
                    
                    <div class="mb-3">
                        <label for="editProductName" class="form-label">
                            <i class="fas fa-utensils"></i> Producto
                        </label>
                        <input type="text" class="form-control" id="editProductName" readonly />
                    </div>
                    
                    <div class="mb-3">
                        <label for="editQuantity" class="form-label">
                            <i class="fas fa-sort-numeric-up"></i> Cantidad
                        </label>
                        <div class="input-group">
                            <button type="button" class="btn btn-outline-secondary" onclick="decreaseModalQuantity()">
                                <i class="fas fa-minus"></i>
                            </button>
                            <input type="number" class="form-control text-center" id="editQuantity" min="1" max="99" value="1" />
                            <button type="button" class="btn btn-outline-secondary" onclick="increaseModalQuantity()">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="editNotes" class="form-label">
                            <i class="fas fa-sticky-note"></i> Notas
                        </label>
                        <textarea class="form-control" id="editNotes" rows="3" placeholder="Ej: Sin cebolla, bien cocido, extra queso..."></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-dollar-sign"></i> Precio Unitario
                        </label>
                        <div class="form-control-plaintext fw-bold text-primary" id="editUnitPrice">$0.00</div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-calculator"></i> Total
                        </label>
                        <div class="form-control-plaintext fw-bold text-success" id="editTotalPrice">$0.00</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Cancelar
                </button>
                <button type="button" class="btn btn-primary" onclick="saveItemChanges()">
                    <i class="fas fa-save"></i> Guardar Cambios
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para pagos parciales -->
<div class="modal fade" id="paymentModal" tabindex="-1" aria-labelledby="paymentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="paymentModalLabel">
                    <i class="fas fa-credit-card"></i> Pago Parcial
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Resumen de la cuenta -->
                <div class="order-summary mb-4">
                    <div class="section-header">
                        <h5 class="section-title">
                            <i class="fas fa-receipt"></i> Resumen de la Cuenta
                        </h5>
                    </div>
                    <div class="mb-3">
                        <strong>
                            <i class="fas fa-list"></i> Items en la orden:
                        </strong>
                        <div class="order-items-list mt-2" style="max-height: 200px; overflow-y: auto; border: 1px solid #e1e8ed; border-radius: 12px; padding: 1rem;" id="paymentOrderItems">
                            <!-- Items cargados din谩micamente -->
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="text-center p-3 bg-light rounded">
                                <i class="fas fa-calculator text-primary"></i>
                                <strong>Total Orden: <span id="paymentOrderTotal" class="text-primary">$0.00</span></strong>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center p-3 bg-light rounded">
                                <i class="fas fa-check-circle text-success"></i>
                                <strong>Ya Pagado: <span id="paymentTotalPaid" class="text-success">$0.00</span></strong>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center p-3 bg-light rounded">
                                <i class="fas fa-hourglass-half text-warning"></i>
                                <strong>Pendiente: <span id="paymentRemaining" class="text-warning">$0.00</span></strong>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Formulario de pago -->
                <form id="paymentForm">
                    <!-- Tipo de pago -->
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-users"></i> Tipo de Pago
                        </label>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check p-3 border rounded">
                                    <input class="form-check-input" type="radio" name="paymentType" id="paymentTypeIndividual" value="individual" checked onchange="togglePaymentType()">
                                    <label class="form-check-label fw-bold" for="paymentTypeIndividual">
                                        <i class="fas fa-user text-primary"></i> Individual
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check p-3 border rounded">
                                    <input class="form-check-input" type="radio" name="paymentType" id="paymentTypeShared" value="shared" onchange="togglePaymentType()">
                                    <label class="form-check-label fw-bold" for="paymentTypeShared">
                                        <i class="fas fa-users text-info"></i> Compartido
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="paymentAmount" class="form-label">
                                    <i class="fas fa-dollar-sign"></i> Monto a Pagar
                                </label>
                                <input type="number" class="form-control" id="paymentAmount" step="0.01" min="0.01" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="paymentMethod" class="form-label">
                                    <i class="fas fa-credit-card"></i> M茅todo de Pago
                                    <span id="paymentMethodLockIcon" class="text-muted ms-1" style="display: none;">
                                        <i class="fas fa-lock" title="Campo bloqueado para pagos compartidos"></i>
                                    </span>
                                </label>
                                <select class="form-control" id="paymentMethod" required>
                                    <option value="">Seleccionar m茅todo</option>
                                    <option value="Efectivo"> Efectivo</option>
                                    <option value="Tarjeta"> Tarjeta</option>
                                    <option value="Transferencia"> Transferencia</option>
                                    <option value="Compartido"> Compartido</option>
                                    <option value="Otro"> Otro</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Campo para nombre del pagador (solo para pagos individuales) -->
                    <div id="payerNameSection" class="mb-3">
                        <label for="payerName" class="form-label">
                            <i class="fas fa-user"></i> Nombre del Pagador (Opcional)
                        </label>
                        <input type="text" class="form-control" id="payerName" placeholder="Ej: Juan P茅rez, Mesa 5, etc.">
                        <small class="form-text text-muted">
                            <i class="fas fa-info-circle"></i> Opcional: Identificar qui茅n realiza el pago
                        </small>
                    </div>

                    <!-- Pagos divididos (solo para pagos compartidos) -->
                    <div id="splitPaymentsSection" class="mb-3" style="display: none;">
                        <div class="d-flex justify-content-between align-items-center">
                            <label class="form-label">
                                <i class="fas fa-users"></i> Pagos Divididos
                            </label>
                            <button type="button" class="btn btn-sm btn-outline-primary" onclick="addSplitPayment()">
                                <i class="fas fa-plus"></i> Agregar Persona
                            </button>
                        </div>
                        <div id="splitPaymentsContainer" class="mt-2">
                            <!-- Pagos divididos se agregan aqu铆 din谩micamente -->
                        </div>
                    </div>

                    <!-- Informaci贸n de validaci贸n y saldo pendiente -->
                    <div class="row">
                        <div class="col-md-8">
                            <div id="individualPaymentInfo" class="alert alert-info">
                                <small>
                                    <i class="fas fa-info-circle"></i> 
                                    <strong>Pago Individual:</strong> Una sola persona paga el monto completo.<br>
                                    Opcionalmente puedes agregar el nombre del pagador para identificaci贸n.
                                </small>
                            </div>
                            <div id="sharedPaymentInfo" class="alert alert-info" style="display: none;">
                                <small>
                                    <i class="fas fa-info-circle"></i> 
                                    <strong>Pago Compartido:</strong> Divide el pago entre varias personas.<br>
                                    La suma debe ser igual al monto total. Cada persona puede usar un m茅todo diferente.<br>
                                    <strong>Nota:</strong> Si no ingresas nombres, se asignar谩n autom谩ticamente (Persona 1, Persona 2, etc.).
                                </small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div id="remainingBalanceSection" class="alert alert-warning" style="display: none;">
                                <small>
                                    <i class="fas fa-exclamation-triangle"></i> 
                                    <strong>Saldo pendiente:</strong><br>
                                    <span id="remainingBalanceDisplay">$0.00</span>
                                </small>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Resumen de pagos divididos -->
                    <div id="splitPaymentSummary" class="mt-3" style="display: none;">
                        <!-- El resumen se carga din谩micamente aqu铆 -->
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Cancelar
                </button>
                <button type="button" class="btn btn-primary" onclick="processPayment()">
                    <i class="fas fa-check-circle"></i> Procesar Pago
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- SweetAlert2 para alertas m谩s bonitas -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <!-- SignalR -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    
    <!-- CSS espec铆fico de 贸rdenes -->
    <link rel="stylesheet" href="~/css/order.css" />
    
    <!-- JavaScript modular - Orden de carga importante -->
    <script src="~/js/order/utilities.js"></script>
    <script src="~/js/order/dynamic-status.js"></script>
    <script src="~/js/order/order-management.js"></script>
    <script src="~/js/order/order-ui.js"></script>
    <script src="~/js/order/order-operations.js"></script>
    <script src="~/js/order/tables.js"></script>
    <script src="~/js/order/categories.js"></script>
    <script src="~/js/order/signalr.js"></script>
    <script src="~/js/order/payments.js"></script>
    
    <!-- Script de prueba para verificar carga -->
    <script src="~/js/order/test-loading.js"></script>
    
    <!-- Script de debug para SignalR -->
    <script src="~/js/order/debug-signalr.js"></script>
    
    <!-- Script de prueba para m煤ltiples pantallas -->
    <script src="~/js/order/test-multi-screen.js"></script>
    
    <!-- Script de prueba para agrupaci贸n de items -->
    <script src="~/js/order/test-item-grouping.js"></script>
    
    <script>
        // Inicializar cuando se carga la p谩gina
        document.addEventListener('DOMContentLoaded', function() {
            try {
                console.log('[Main] Iniciando carga de la aplicaci贸n...');
                
                // Inicializar SignalR primero
                initializeSignalR();
                
                // Cargar datos
                loadTables();
                loadCategories();
                
                // Agregar event listeners para los botones
                const sendToKitchenBtn = document.getElementById('sendToKitchen');
                const clearOrderBtn = document.getElementById('clearOrderBtn');
                const cancelOrderBtn = document.getElementById('cancelOrder');
                
                if (sendToKitchenBtn) {
                    sendToKitchenBtn.addEventListener('click', sendToKitchen);
                }
                
                if (clearOrderBtn) {
                    clearOrderBtn.addEventListener('click', clearOrder);
                }
                
                if (cancelOrderBtn) {
                    cancelOrderBtn.addEventListener('click', cancelOrder);
                }
                
                // Deshabilitar bot贸n inicialmente
                disableConfirmButton();
                
                console.log('[Main] Aplicaci贸n cargada exitosamente');
            } catch (error) {
                console.error('[Main] Error al inicializar la aplicaci贸n:', error);
            }
        });
    </script>
} 