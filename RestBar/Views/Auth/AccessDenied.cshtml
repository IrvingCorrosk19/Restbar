@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Acceso Denegado";
}

<div class="login-form">
    <div class="form-title">
        <h2>Acceso Denegado</h2>
        <p>No tienes permisos para acceder a esta página</p>
    </div>

    <div class="alert alert-danger">
        <i class="fas fa-ban me-2"></i>
        <strong>Acceso Restringido</strong><br>
        Tu cuenta no tiene los permisos necesarios para acceder al recurso solicitado.
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Login", "Auth")" class="btn btn-login">
            <i class="fas fa-sign-in-alt me-2"></i>
            Volver al Login
        </a>
    </div>

    <div class="admin-link">
        <p class="mb-2">¿Necesitas acceso?</p>
        <p class="text-muted">Contacta al administrador del sistema para solicitar permisos</p>
    </div>
</div> 