        /* Variables CSS del tema elegante para restaurante */
        :root {
            /* Colores primarios elegantes */
            --primary-color: #1e40af;
            --primary-dark: #1e3a8a;
            --accent-gold: #f59e0b;
            --accent-gold-light: #fbbf24;
            --accent-copper: #c2410c;
            --accent-copper-light: #ea580c;
            
            /* Estados con colores sofisticados */
            --success-color: #16a34a;
            --success-light: #22c55e;
            --success-elegant: #15803d;
            --warning-color: #d97706;
            --warning-light: #f59e0b;
            --warning-elegant: #b45309;
            --danger-color: #dc2626;
            --danger-light: #ef4444;
            --danger-elegant: #b91c1c;
            --info-color: #0891b2;
            --info-light: #06b6d4;
            
            /* Backgrounds sofisticados */
            --bg-primary: #0f172a;
            --bg-secondary: #1e293b;
            --bg-tertiary: #334155;
            --bg-surface: #475569;
            --bg-elegant: #262626;
            --bg-card: #1a1a1a;
            
            /* Textos con mejor contraste */
            --text-primary: #ffffff;
            --text-secondary: #e5e7eb;
            --text-muted: #9ca3af;
            --text-accent: #fbbf24;
            
            /* Bordes elegantes */
            --border-color: #525252;
            --border-light: #737373;
            --border-accent: #f59e0b;
            
            /* Sombras m√°s dram√°ticas */
            --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.4);
            --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.5);
            --shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.6);
            --shadow-glow: 0 0 20px rgba(245, 158, 11, 0.2);
            
            /* Radios m√°s refinados */
            --radius-sm: 6px;
            --radius-md: 10px;
            --radius-lg: 14px;
            
            /* Transiciones suaves */
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            --transition-fast: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        }

                 /* Tema elegante para pedidos de restaurante */
         body.order-theme {
             margin: 0;
             font-family: 'Inter', sans-serif;
             background: linear-gradient(135deg, #0a0a0a 0%, var(--bg-elegant) 35%, #1a1a1a 100%);
             color: var(--text-primary);
             min-height: 100vh;
             position: relative;
             overflow-x: hidden;
         }

         /* Patr√≥n de fondo elegante con acentos dorados */
         body.order-theme::before {
             content: '';
             position: fixed;
             top: 0;
             left: 0;
             width: 100%;
             height: 100%;
             background-image: 
                 radial-gradient(circle at 15% 85%, rgba(245, 158, 11, 0.06) 0%, transparent 45%),
                 radial-gradient(circle at 85% 15%, rgba(194, 65, 12, 0.08) 0%, transparent 50%),
                 radial-gradient(circle at 50% 50%, rgba(30, 64, 175, 0.04) 0%, transparent 60%),
                 linear-gradient(45deg, transparent 48%, rgba(245, 158, 11, 0.02) 50%, transparent 52%);
             z-index: -1;
             animation: backgroundShift 25s ease-in-out infinite;
         }

         /* Overlay sutil para textura */
         body.order-theme::after {
             content: '';
             position: fixed;
             top: 0;
             left: 0;
             width: 100%;
             height: 100%;
             background: 
                 repeating-linear-gradient(
                     90deg,
                     transparent,
                     transparent 2px,
                     rgba(245, 158, 11, 0.008) 2px,
                     rgba(245, 158, 11, 0.008) 4px
                 );
             z-index: -1;
             pointer-events: none;
         }

         @@keyframes backgroundShift {
             0%, 100% { 
                 transform: translate(0, 0) scale(1); 
                 opacity: 0.4;
             }
             33% { 
                 transform: translate(-10px, -10px) scale(1.02); 
                 opacity: 0.6;
             }
             66% { 
                 transform: translate(10px, -5px) scale(0.98); 
                 opacity: 0.5;
             }
         }

                 /* T√≠tulo principal */
         .page-title {
             color: var(--text-primary);
             text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
             margin-bottom: 2rem;
             text-align: center;
         }

         .page-title h2 {
             color: var(--text-primary);
             font-size: 2.2rem;
             font-weight: 700;
             margin-bottom: 0.5rem;
             text-shadow: 0 2px 4px rgba(0,0,0,0.3), 0 0 20px rgba(245, 158, 11, 0.1);
             letter-spacing: -0.025em;
             position: relative;
         }

         .page-title h2::after {
             content: '';
             position: absolute;
             bottom: -8px;
             left: 50%;
             transform: translateX(-50%);
             width: 100px;
             height: 2px;
             background: linear-gradient(90deg, transparent, var(--accent-gold), transparent);
             border-radius: 1px;
         }

         .page-title .subtitle {
             color: var(--text-secondary);
             font-size: 1.05rem;
             font-weight: 400;
             margin-bottom: 2rem;
             opacity: 0.9;
             font-style: italic;
         }

         /* Efectos para iconos */
         .icon-pulse {
             animation: pulse 2s infinite;
         }

         @@keyframes pulse {
             0% { transform: scale(1); }
             50% { transform: scale(1.05); }
             100% { transform: scale(1); }
         }

         /* Separadores con estilo */
         .section-divider {
             height: 2px;
             background: linear-gradient(90deg, transparent, var(--primary-color), transparent);
             margin: 2rem 0;
             border-radius: 1px;
         }

         /* Mejoras para los iconos de las cards */
         .producto-card .product-icon {
             position: absolute;
             top: 1rem;
             right: 1rem;
             width: 40px;
             height: 40px;
             border-radius: 50%;
             background: linear-gradient(135deg, var(--primary-color), var(--info-color));
             display: flex;
             align-items: center;
             justify-content: center;
             color: white;
             font-size: 1.2rem;
             box-shadow: var(--shadow-sm);
             transition: var(--transition);
             z-index: 4;
         }

         .producto-card:hover .product-icon {
             transform: rotate(360deg) scale(1.1);
             box-shadow: var(--shadow-md);
         }

         /* Efectos para los badges de estado */
         .status-badge {
             padding: 0.25rem 0.75rem;
             border-radius: var(--radius-sm);
             font-size: 0.8rem;
             font-weight: 600;
             text-transform: uppercase;
             letter-spacing: 0.5px;
             position: relative;
             overflow: hidden;
         }

         .status-badge::before {
             content: '';
             position: absolute;
             top: 0;
             left: -100%;
             width: 100%;
             height: 100%;
             background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
             transition: left 0.5s ease;
         }

         .status-badge:hover::before {
             left: 100%;
         }

         .status-badge.pendiente {
             background: linear-gradient(135deg, var(--warning-color), var(--warning-light));
             color: white;
         }

         .status-badge.listo {
             background: linear-gradient(135deg, var(--success-color), var(--success-light));
             color: white;
         }

         .status-badge.servido {
             background: linear-gradient(135deg, var(--info-color), var(--info-light));
             color: white;
         }

                 /* Estilo para las mesas */
         .mesa-btn {
             min-width: 100px;
             padding: 12px 16px;
             font-weight: 600;
             border-radius: var(--radius-md);
             transition: var(--transition);
             border: 2px solid;
             box-shadow: var(--shadow-sm);
             text-align: center;
             position: relative;
             overflow: hidden;
             backdrop-filter: blur(10px);
         }

         .mesa-btn::before {
             content: '';
             position: absolute;
             top: 0;
             left: -100%;
             width: 100%;
             height: 100%;
             background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
             transition: left 0.5s ease;
         }

         .mesa-btn::after {
             content: '';
             position: absolute;
             inset: 0;
             border-radius: var(--radius-md);
             padding: 2px;
             background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1), transparent);
             mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
             mask-composite: subtract;
             opacity: 0;
             transition: opacity 0.3s ease;
         }

         .mesa-btn:hover::before {
             left: 100%;
         }

         .mesa-btn:hover::after {
             opacity: 1;
         }

         .mesa-btn:hover {
             transform: translateY(-3px) scale(1.05);
             box-shadow: var(--shadow-lg);
         }

         .mesa-btn:active {
             transform: translateY(-1px) scale(1.02);
             box-shadow: var(--shadow-md);
         }

         /* Mesa Disponible - Verde elegante */
         .mesa-disponible {
             background: linear-gradient(135deg, #1a1a2e 0%, #2a2a2a 100%);
             color: var(--text-primary);
             border: 2px solid var(--success-elegant);
             box-shadow: var(--shadow-sm), inset 0 1px 2px rgba(22, 163, 74, 0.1);
         }

         .mesa-disponible:hover {
             background: linear-gradient(135deg, #1a2e1a 0%, #2a2a2a 100%);
             border-color: var(--success-light);
             box-shadow: var(--shadow-md), 0 0 15px rgba(22, 163, 74, 0.2);
             color: var(--text-primary);
         }

         .mesa-disponible::after {
             content: '‚óè';
             position: absolute;
             top: 8px;
             right: 8px;
             color: var(--success-light);
             font-size: 12px;
             text-shadow: 0 0 8px rgba(22, 163, 74, 0.6);
         }

         /* Mesa Ocupada - Rojo elegante */
         .mesa-ocupada {
             background: linear-gradient(135deg, #1a1a2e 0%, #2a2a2a 100%);
             color: var(--text-primary);
             border: 2px solid var(--danger-elegant);
             box-shadow: var(--shadow-sm), inset 0 1px 2px rgba(185, 28, 28, 0.1);
         }

         .mesa-ocupada:hover {
             background: linear-gradient(135deg, #2e1a1a 0%, #2a2a2a 100%);
             border-color: var(--danger-light);
             box-shadow: var(--shadow-md), 0 0 15px rgba(185, 28, 28, 0.2);
             color: var(--text-primary);
         }

         .mesa-ocupada::after {
             content: '‚óè';
             position: absolute;
             top: 8px;
             right: 8px;
             color: var(--danger-light);
             font-size: 12px;
             text-shadow: 0 0 8px rgba(185, 28, 28, 0.6);
         }

         /* Mesa en Pedido - Dorado elegante */
         .mesa-en-pedido {
             background: linear-gradient(135deg, #1a1a2e 0%, #2a2a2a 100%);
             color: var(--text-primary);
             border: 2px solid var(--accent-gold);
             box-shadow: var(--shadow-sm), inset 0 1px 2px rgba(245, 158, 11, 0.1);
         }

         .mesa-en-pedido:hover {
             background: linear-gradient(135deg, #2e2517 0%, #2a2a2a 100%);
             border-color: var(--accent-gold-light);
             box-shadow: var(--shadow-md), var(--shadow-glow);
             color: var(--text-primary);
         }

         .mesa-en-pedido::after {
             content: '‚óè';
             position: absolute;
             top: 8px;
             right: 8px;
             color: var(--accent-gold-light);
             font-size: 12px;
             text-shadow: 0 0 8px rgba(245, 158, 11, 0.6);
         }

         /* Mesa Seleccionada - Acento azul dorado */
         .mesa-btn.active {
             background: linear-gradient(135deg, #1a1a2e 0%, #2a2a2a 100%) !important;
             border-color: var(--accent-gold) !important;
             color: var(--text-accent) !important;
             box-shadow: var(--shadow-lg), var(--shadow-glow) !important;
             transform: translateY(-2px) scale(1.03) !important;
         }

         .mesa-btn.active::after {
             content: '‚òÖ' !important;
             color: var(--accent-gold-light) !important;
             font-size: 14px !important;
             animation: pulse 2s infinite !important;
         }

                 /* Estilo para categor√≠as */
         /* Categor√≠as elegantes estilo restaurante */
         .categoria-btn {
             min-width: 140px;
             margin-bottom: 12px;
             background: linear-gradient(135deg, var(--bg-card) 0%, rgba(38, 38, 38, 0.8) 100%);
             color: var(--text-secondary);
             border: 1px solid rgba(115, 115, 115, 0.3);
             border-radius: var(--radius-md);
             padding: 12px 20px;
             font-weight: 500;
             font-size: 0.95rem;
             transition: var(--transition);
             box-shadow: var(--shadow-sm);
             position: relative;
             overflow: hidden;
             backdrop-filter: blur(15px);
             letter-spacing: 0.025em;
         }

         .categoria-btn::before {
             content: '';
             position: absolute;
             top: 0;
             left: -100%;
             width: 100%;
             height: 100%;
             background: linear-gradient(90deg, transparent, rgba(245, 158, 11, 0.08), transparent);
             transition: left 0.6s ease;
         }

         .categoria-btn::after {
             content: '';
             position: absolute;
             bottom: 0;
             left: 50%;
             transform: translateX(-50%) scaleX(0);
             width: 60%;
             height: 2px;
             background: linear-gradient(90deg, transparent, var(--accent-gold), transparent);
             transition: all 0.4s ease;
             border-radius: 1px;
         }

         .categoria-btn:hover::before {
             left: 100%;
         }

         .categoria-btn:hover::after {
             transform: translateX(-50%) scaleX(1);
             box-shadow: 0 0 8px rgba(245, 158, 11, 0.4);
         }

         .categoria-btn:hover {
             transform: translateY(-2px);
             box-shadow: var(--shadow-md), 0 4px 20px rgba(245, 158, 11, 0.1);
             border-color: rgba(245, 158, 11, 0.4);
             color: var(--text-primary);
             background: linear-gradient(135deg, rgba(38, 38, 38, 0.9) 0%, var(--bg-card) 100%);
         }

         /* Categor√≠a Activa - Dorado elegante */
         .categoria-btn.active {
             background: linear-gradient(135deg, rgba(46, 37, 23, 0.9) 0%, rgba(38, 38, 38, 0.95) 100%);
             border-color: var(--accent-gold);
             color: var(--text-accent);
             box-shadow: var(--shadow-md), var(--shadow-glow);
             position: relative;
             transform: translateY(-1px);
         }

         .categoria-btn.active::after {
             transform: translateX(-50%) scaleX(1);
             background: linear-gradient(90deg, transparent, var(--accent-gold-light), transparent);
             height: 3px;
             box-shadow: 0 0 12px rgba(245, 158, 11, 0.6);
         }

         .categoria-btn.active::before {
             background: linear-gradient(90deg, transparent, rgba(245, 158, 11, 0.12), transparent);
             left: 0;
         }

         /* Efecto especial para categor√≠a activa */
         .categoria-btn.active {
             border-top: 1px solid rgba(245, 158, 11, 0.6);
             border-bottom: 1px solid rgba(245, 158, 11, 0.6);
         }

                 /* Estilo para productos */
         .producto-card {
             background: linear-gradient(135deg, var(--bg-secondary), var(--bg-tertiary));
             border: 2px solid var(--border-color);
             border-radius: var(--radius-lg);
             transition: var(--transition);
             box-shadow: var(--shadow-sm);
             overflow: hidden;
             position: relative;
             backdrop-filter: blur(10px);
         }

         .producto-card::before {
             content: '';
             position: absolute;
             top: 0;
             left: 0;
             right: 0;
             height: 4px;
             background: linear-gradient(90deg, var(--info-color), var(--success-color), var(--warning-color), var(--info-color));
             background-size: 300% 100%;
             animation: colorShift 3s ease-in-out infinite;
             transform: scaleX(0);
             transition: transform 0.3s ease;
         }

         .producto-card::after {
             content: '';
             position: absolute;
             top: 0;
             left: 0;
             right: 0;
             bottom: 0;
             background: linear-gradient(135deg, rgba(30, 64, 175, 0.05), rgba(5, 150, 105, 0.05));
             opacity: 0;
             transition: opacity 0.3s ease;
         }

         @@keyframes colorShift {
             0%, 100% { background-position: 0% 0; }
             50% { background-position: 100% 0; }
         }

         .producto-card:hover::before {
             transform: scaleX(1);
         }

         .producto-card:hover::after {
             opacity: 1;
         }

         .producto-card:hover {
             transform: translateY(-6px) scale(1.02);
             box-shadow: var(--shadow-lg);
             border-color: var(--info-color);
             background: linear-gradient(135deg, var(--bg-tertiary), var(--bg-surface));
         }

         .producto-card .card-body {
             color: var(--text-primary);
             position: relative;
             z-index: 2;
             padding: 1.5rem;
         }

         .producto-card .card-title {
             color: var(--text-primary);
             font-weight: 700;
             font-size: 1.1rem;
             margin-bottom: 0.5rem;
             text-shadow: 0 1px 2px rgba(0,0,0,0.1);
         }

         .producto-card .card-text {
             color: var(--text-secondary);
             font-size: 0.9rem;
             line-height: 1.4;
         }

         .producto-card .precio {
             color: var(--success-light);
             font-weight: 700;
             font-size: 1.2rem;
             text-shadow: 0 1px 2px rgba(0,0,0,0.2);
         }

         .producto-card .btn {
             margin-top: 15px;
             border-radius: var(--radius-sm);
             font-weight: 600;
             transition: var(--transition);
             position: relative;
             overflow: hidden;
             z-index: 3;
         }

         .producto-card .btn::before {
             content: '';
             position: absolute;
             top: 0;
             left: -100%;
             width: 100%;
             height: 100%;
             background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
             transition: left 0.5s ease;
         }

         .producto-card .btn:hover::before {
             left: 100%;
         }

         .producto-card .btn:hover {
             transform: translateY(-1px);
             box-shadow: var(--shadow-md);
         }

