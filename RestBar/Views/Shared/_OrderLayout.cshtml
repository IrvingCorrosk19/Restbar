         .resumen-card .card-body {
             background: linear-gradient(135deg, var(--bg-card) 0%, rgba(38, 38, 38, 0.95) 100%);
             color: var(--text-primary);
             position: relative;
             z-index: 2;
             padding: 2rem;
             border: 1px solid rgba(245, 158, 11, 0.1);
         }

         .resumen-card .order-total {
             background: linear-gradient(135deg, var(--bg-tertiary), var(--bg-surface));
             border: 2px solid var(--border-color);
             border-radius: var(--radius-md);
             padding: 1rem;
             margin-top: 1rem;
             font-size: 1.1rem;
             font-weight: 700;
             color: var(--success-light);
             text-align: center;
             box-shadow: var(--shadow-sm);
         }

         .resumen-card .order-actions {
             display: flex;
             gap: 0.75rem;
             margin-top: 1rem;
         }

         .resumen-card .order-actions .btn {
             flex: 1;
             padding: 0.75rem 1rem;
             font-size: 0.95rem;
         }

        /* Tablas */
        .table {
            background: transparent;
            color: var(--text-primary);
            border-collapse: separate;
            border-spacing: 0;
        }

        .table th {
            background: linear-gradient(135deg, var(--bg-tertiary), var(--bg-surface));
            color: var(--text-primary);
            font-weight: 600;
            border-bottom: 2px solid var(--border-color);
            padding: 0.75rem;
            vertical-align: middle;
        }

        .table td {
            background: var(--bg-secondary);
            color: var(--text-secondary);
            border-bottom: 1px solid var(--border-color);
            padding: 0.75rem;
            vertical-align: middle;
        }

        .table tbody tr:hover td {
            background: var(--bg-tertiary);
            color: var(--text-primary);
        }

                 /* Botones personalizados */
         .btn {
             border-radius: var(--radius-sm);
             font-weight: 600;
             transition: var(--transition);
             position: relative;
             overflow: hidden;
             border: 2px solid;
             backdrop-filter: blur(10px);
         }

         .btn::before {
             content: '';
             position: absolute;
             top: 0;
             left: -100%;
             width: 100%;
             height: 100%;
             background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
             transition: left 0.5s ease;
         }

         .btn:hover::before {
             left: 100%;
         }

         /* Bot√≥n Primario - Dorado Elegante */
         .btn-primary {
             background: linear-gradient(135deg, var(--bg-card) 0%, rgba(46, 37, 23, 0.8) 100%);
             border: 2px solid var(--accent-gold);
             color: var(--text-accent);
             box-shadow: var(--shadow-sm), 0 0 10px rgba(245, 158, 11, 0.2);
             position: relative;
             font-weight: 600;
             letter-spacing: 0.025em;
         }

         .btn-primary::after {
             content: '';
             position: absolute;
             inset: 0;
             border-radius: inherit;
             background: linear-gradient(135deg, rgba(245, 158, 11, 0.1), rgba(245, 158, 11, 0.2));
             opacity: 0;
             transition: opacity 0.3s ease;
         }

         .btn-primary:hover {
             background: linear-gradient(135deg, rgba(46, 37, 23, 0.9) 0%, var(--bg-card) 100%);
             border-color: var(--accent-gold-light);
             color: var(--text-accent);
             transform: translateY(-2px);
             box-shadow: var(--shadow-md), var(--shadow-glow);
         }

         .btn-primary:hover::after {
             opacity: 1;
         }

         .btn-primary:active {
             transform: translateY(0);
             box-shadow: var(--shadow-sm);
         }

         /* Bot√≥n Success - Verde Elegante */
         .btn-success {
             background: linear-gradient(135deg, var(--bg-card) 0%, rgba(26, 46, 26, 0.8) 100%);
             border: 2px solid var(--success-elegant);
             color: var(--success-light);
             box-shadow: var(--shadow-sm), 0 0 10px rgba(22, 163, 74, 0.2);
             position: relative;
             font-weight: 600;
         }

         .btn-success::after {
             content: '';
             position: absolute;
             inset: 0;
             border-radius: inherit;
             background: linear-gradient(135deg, rgba(22, 163, 74, 0.1), rgba(22, 163, 74, 0.2));
             opacity: 0;
             transition: opacity 0.3s ease;
         }

         .btn-success:hover {
             background: linear-gradient(135deg, rgba(26, 46, 26, 0.9) 0%, var(--bg-card) 100%);
             border-color: var(--success-light);
             color: var(--success-light);
             transform: translateY(-2px);
             box-shadow: var(--shadow-md), 0 0 15px rgba(22, 163, 74, 0.3);
         }

         .btn-success:hover::after {
             opacity: 1;
         }

         .btn-success:active {
             transform: translateY(0);
             box-shadow: var(--shadow-sm);
         }

         /* Bot√≥n Warning - Cobre Elegante */
         .btn-warning {
             background: linear-gradient(135deg, var(--bg-card) 0%, rgba(46, 37, 23, 0.8) 100%);
             border: 2px solid var(--accent-copper);
             color: var(--accent-copper-light);
             box-shadow: var(--shadow-sm), 0 0 10px rgba(194, 65, 12, 0.2);
             position: relative;
             font-weight: 600;
         }

         .btn-warning::after {
             content: '';
             position: absolute;
             inset: 0;
             border-radius: inherit;
             background: linear-gradient(135deg, rgba(194, 65, 12, 0.1), rgba(194, 65, 12, 0.2));
             opacity: 0;
             transition: opacity 0.3s ease;
         }

         .btn-warning:hover {
             background: linear-gradient(135deg, rgba(46, 37, 23, 0.9) 0%, var(--bg-card) 100%);
             border-color: var(--accent-copper-light);
             color: var(--accent-copper-light);
             transform: translateY(-2px);
             box-shadow: var(--shadow-md), 0 0 15px rgba(194, 65, 12, 0.3);
         }

         .btn-warning:hover::after {
             opacity: 1;
         }

         .btn-warning:active {
             transform: translateY(0);
             box-shadow: var(--shadow-sm);
         }

         /* Bot√≥n Danger - Rojo Elegante */
         .btn-danger {
             background: linear-gradient(135deg, var(--bg-card) 0%, rgba(46, 26, 26, 0.8) 100%);
             border: 2px solid var(--danger-elegant);
             color: var(--danger-light);
             box-shadow: var(--shadow-sm), 0 0 10px rgba(185, 28, 28, 0.2);
             position: relative;
             font-weight: 600;
         }

         .btn-danger::after {
             content: '';
             position: absolute;
             inset: 0;
             border-radius: inherit;
             background: linear-gradient(135deg, rgba(185, 28, 28, 0.1), rgba(185, 28, 28, 0.2));
             opacity: 0;
             transition: opacity 0.3s ease;
         }

         .btn-danger:hover {
             background: linear-gradient(135deg, rgba(46, 26, 26, 0.9) 0%, var(--bg-card) 100%);
             border-color: var(--danger-light);
             color: var(--danger-light);
             transform: translateY(-2px);
             box-shadow: var(--shadow-md), 0 0 15px rgba(185, 28, 28, 0.3);
         }

         .btn-danger:hover::after {
             opacity: 1;
         }

         .btn-danger:active {
             transform: translateY(0);
             box-shadow: var(--shadow-sm);
         }

         .btn-secondary {
             background: linear-gradient(135deg, var(--bg-tertiary), var(--bg-surface));
             border-color: var(--border-color);
             color: var(--text-primary);
             box-shadow: var(--shadow-sm);
         }

         .btn-secondary:hover {
             background: linear-gradient(135deg, var(--bg-surface), var(--bg-tertiary));
             border-color: var(--border-light);
             color: var(--text-primary);
             transform: translateY(-2px);
             box-shadow: var(--shadow-lg);
         }

         .btn-secondary:active {
             transform: translateY(0);
             box-shadow: var(--shadow-sm);
         }

        /* Modales */
        .modal-content {
            background: linear-gradient(135deg, var(--bg-secondary), var(--bg-tertiary));
            border: 2px solid var(--border-color);
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-lg);
            color: var(--text-primary);
        }

        .modal-header {
            background: linear-gradient(135deg, var(--bg-tertiary), var(--bg-surface));
            border-bottom: 2px solid var(--border-color);
            color: var(--text-primary);
        }

        .modal-body {
            background: var(--bg-secondary);
            color: var(--text-primary);
        }

        .modal-footer {
            background: linear-gradient(135deg, var(--bg-tertiary), var(--bg-surface));
            border-top: 2px solid var(--border-color);
        }

        /* Formularios */
        .form-control {
            background: var(--bg-tertiary);
            border: 2px solid var(--border-color);
            border-radius: var(--radius-sm);
            color: var(--text-primary);
            transition: var(--transition);
        }

        .form-control:focus {
            background: var(--bg-surface);
            border-color: var(--primary-color);
            color: var(--text-primary);
            box-shadow: 0 0 0 0.2rem rgba(30, 64, 175, 0.25);
        }

        .form-control::placeholder {
            color: var(--text-muted);
        }

        .form-label {
            color: var(--text-primary);
            font-weight: 600;
        }

        .form-select {
            background: var(--bg-tertiary);
            border: 2px solid var(--border-color);
            color: var(--text-primary);
        }

        .form-select:focus {
            background: var(--bg-surface);
            border-color: var(--primary-color);
            color: var(--text-primary);
            box-shadow: 0 0 0 0.2rem rgba(30, 64, 175, 0.25);
        }

        /* Alertas */
        .alert {
            border: 2px solid var(--border-color);
            border-radius: var(--radius-md);
            box-shadow: var(--shadow-sm);
        }

        .alert-info {
            background: linear-gradient(135deg, rgba(8, 145, 178, 0.1), rgba(6, 182, 212, 0.1));
            border-color: var(--info-color);
            color: var(--text-primary);
        }

                 /* Animaciones de entrada */
         @@keyframes fadeInUp {
             from {
                 opacity: 0;
                 transform: translateY(20px);
             }
             to {
                 opacity: 1;
                 transform: translateY(0);
             }
         }

         @@keyframes slideInLeft {
             from {
                 opacity: 0;
                 transform: translateX(-30px);
             }
             to {
                 opacity: 1;
                 transform: translateX(0);
             }
         }

         @@keyframes slideInRight {
             from {
                 opacity: 0;
                 transform: translateX(30px);
             }
             to {
                 opacity: 1;
                 transform: translateX(0);
             }
         }

         .container-fluid {
             animation: fadeInUp 0.6s ease-out;
         }

         .categoria-btn {
             animation: fadeInUp 0.3s ease-out;
         }

         .categoria-btn:nth-child(odd) {
             animation-delay: 0.05s;
         }

         .categoria-btn:nth-child(even) {
             animation-delay: 0.1s;
         }

         .producto-card {
             animation: fadeInUp 0.3s ease-out;
         }

         .producto-card:nth-child(1) { animation-delay: 0.05s; }
         .producto-card:nth-child(2) { animation-delay: 0.1s; }
         .producto-card:nth-child(3) { animation-delay: 0.15s; }
         .producto-card:nth-child(4) { animation-delay: 0.2s; }

         .resumen-card {
             animation: fadeInUp 0.3s ease-out;
             animation-delay: 0.1s;
         }

         .mesa-btn {
             animation: fadeInUp 0.3s ease-out;
         }

         .mesa-btn:nth-child(1) { animation-delay: 0.05s; }
         .mesa-btn:nth-child(2) { animation-delay: 0.1s; }
         .mesa-btn:nth-child(3) { animation-delay: 0.15s; }
         .mesa-btn:nth-child(4) { animation-delay: 0.2s; }

         /* Loader elegante */
         .loading-spinner {
             width: 40px;
             height: 40px;
             border: 4px solid rgba(255, 255, 255, 0.1);
             border-top: 4px solid var(--primary-color);
             border-radius: 50%;
             animation: spin 1s linear infinite;
             margin: 20px auto;
         }

         @@keyframes spin {
             0% { transform: rotate(0deg); }
             100% { transform: rotate(360deg); }
         }

         /* Efectos para las secciones */
         .section-title {
             color: var(--text-primary);
             font-weight: 600;
             margin-bottom: 1rem;
             position: relative;
             padding-left: 1rem;
         }

         .section-title::before {
             content: '';
             position: absolute;
             left: 0;
             top: 0;
             bottom: 0;
             width: 4px;
             background: linear-gradient(135deg, var(--primary-color), var(--success-color));
             border-radius: 2px;
         }

         /* Mejoras en las transiciones */
         * {
             transition: var(--transition);
         }

         /* Efectos hover para elementos interactivos */
         .interactive-element:hover {
             transform: translateY(-2px);
             box-shadow: var(--shadow-md);
         }

         /* Efectos para los n√∫meros de mesa */
         .mesa-number {
             font-size: 1.2rem;
             font-weight: 700;
             text-shadow: 0 1px 2px rgba(0,0,0,0.2);
         }

         /* Efectos para los precios */
         .price-highlight {
             color: var(--success-light);
             font-weight: 700;
             text-shadow: 0 1px 2px rgba(0,0,0,0.2);
         }

        /* Responsividad */
        @@media (max-width: 768px) {
            .mesa-btn {
                min-width: 80px;
                padding: 10px 12px;
            }
            
            .categoria-btn {
                min-width: 120px;
            }
            
            .producto-card {
                margin-bottom: 1rem;
            }
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
