@model IEnumerable<RestBar.Models.PurchaseOrder>
@{
    ViewData["Title"] = "Órdenes de Compra";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-shopping-cart me-2"></i>
                            Órdenes de Compra
                        </h4>
                        <a href="@Url.Action("Create", "PurchaseOrder")" class="btn btn-light">
                            <i class="fas fa-plus me-2"></i>
                            Nueva Orden
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Filtros -->
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <select id="statusFilter" class="form-select">
                                <option value="">Todos los estados</option>
                                <option value="Draft">Borrador</option>
                                <option value="Pending">Pendiente</option>
                                <option value="Approved">Aprobada</option>
                                <option value="Ordered">Ordenada</option>
                                <option value="PartiallyReceived">Parcialmente Recibida</option>
                                <option value="Received">Recibida</option>
                                <option value="Cancelled">Cancelada</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <input type="date" id="startDate" class="form-control" placeholder="Fecha inicio">
                        </div>
                        <div class="col-md-3">
                            <input type="date" id="endDate" class="form-control" placeholder="Fecha fin">
                        </div>
                        <div class="col-md-3">
                            <button id="filterBtn" class="btn btn-outline-primary">
                                <i class="fas fa-filter me-2"></i>
                                Filtrar
                            </button>
                        </div>
                    </div>

                    <!-- Estadísticas -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Total Órdenes</h5>
                                    <h3 id="totalOrders">0</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Pendientes</h5>
                                    <h3 id="pendingOrders">0</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Aprobadas</h5>
                                    <h3 id="approvedOrders">0</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Total Monto</h5>
                                    <h3 id="totalAmount">$0.00</h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tabla de órdenes -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="purchaseOrdersTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>Número</th>
                                    <th>Proveedor</th>
                                    <th>Fecha</th>
                                    <th>Estado</th>
                                    <th>Total</th>
                                    <th>Creado por</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@order.OrderNumber</strong>
                                        </td>
                                        <td>@order.Supplier?.Name</td>
                                        <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <span class="badge @GetStatusBadgeClass(order.Status)">
                                                @GetStatusDisplayName(order.Status)
                                            </span>
                                        </td>
                                        <td>@order.TotalAmount.ToString("C")</td>
                                        <td>@order.CreatedBy?.FullName</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Details", "PurchaseOrder", new { id = order.Id })" 
                                                   class="btn btn-sm btn-info" title="Ver detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if (order.Status == PurchaseOrderStatus.Draft)
                                                {
                                                    <a href="@Url.Action("Edit", "PurchaseOrder", new { id = order.Id })" 
                                                       class="btn btn-sm btn-warning" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form asp-action="Approve" method="post" style="display: inline;">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@order.Id" />
                                                        <button type="submit" class="btn btn-sm btn-success" title="Aprobar"
                                                                onclick="return confirm('¿Está seguro de aprobar esta orden?')">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                    </form>
                                                    <form asp-action="Delete" method="post" style="display: inline;">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@order.Id" />
                                                        <button type="submit" class="btn btn-sm btn-danger" title="Eliminar"
                                                                onclick="return confirm('¿Está seguro de eliminar esta orden?')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                }
                                                @if (order.Status == PurchaseOrderStatus.Approved)
                                                {
                                                    <form asp-action="Cancel" method="post" style="display: inline;">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@order.Id" />
                                                        <button type="submit" class="btn btn-sm btn-danger" title="Cancelar"
                                                                onclick="return confirm('¿Está seguro de cancelar esta orden?')">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    </form>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Cargar estadísticas
            loadStatistics();
            
            // Configurar filtros
            $('#filterBtn').click(function() {
                applyFilters();
            });
            
            // Aplicar filtros al presionar Enter
            $('#statusFilter, #startDate, #endDate').keypress(function(e) {
                if (e.which == 13) {
                    applyFilters();
                }
            });
        });
        
        function loadStatistics() {
            $.get('/PurchaseOrder/GetStatistics', function(response) {
                if (response.success) {
                    $('#totalOrders').text(response.data.totalCount);
                    $('#pendingOrders').text(response.data.pendingCount);
                    $('#approvedOrders').text(response.data.approvedCount);
                    $('#totalAmount').text('$' + response.data.totalAmount.toFixed(2));
                }
            });
        }
        
        function applyFilters() {
            var status = $('#statusFilter').val();
            var startDate = $('#startDate').val();
            var endDate = $('#endDate').val();
            
            // Aquí puedes implementar la lógica de filtrado
            // Por ahora, recargamos la página con parámetros
            var url = '/PurchaseOrder/Index?';
            if (status) url += 'status=' + status + '&';
            if (startDate) url += 'startDate=' + startDate + '&';
            if (endDate) url += 'endDate=' + endDate;
            
            window.location.href = url;
        }
    </script>
}

@functions {
    public string GetStatusBadgeClass(PurchaseOrderStatus status)
    {
        return status switch
        {
            PurchaseOrderStatus.Draft => "bg-secondary",
            PurchaseOrderStatus.Pending => "bg-warning",
            PurchaseOrderStatus.Approved => "bg-info",
            PurchaseOrderStatus.Ordered => "bg-primary",
            PurchaseOrderStatus.PartiallyReceived => "bg-warning",
            PurchaseOrderStatus.Received => "bg-success",
            PurchaseOrderStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }
    
    public string GetStatusDisplayName(PurchaseOrderStatus status)
    {
        return status switch
        {
            PurchaseOrderStatus.Draft => "Borrador",
            PurchaseOrderStatus.Pending => "Pendiente",
            PurchaseOrderStatus.Approved => "Aprobada",
            PurchaseOrderStatus.Ordered => "Ordenada",
            PurchaseOrderStatus.PartiallyReceived => "Parcialmente Recibida",
            PurchaseOrderStatus.Received => "Recibida",
            PurchaseOrderStatus.Cancelled => "Cancelada",
            _ => status.ToString()
        };
    }
} 