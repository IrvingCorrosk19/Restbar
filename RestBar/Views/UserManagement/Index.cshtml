@model IEnumerable<RestBar.Models.User>
@{
    ViewData["Title"] = "Gestión de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-primary">
                        <i class="fas fa-users me-2"></i>
                        Gestión de Usuarios
                    </h1>
                    <p class="text-muted mb-0">
                        @if (User.IsInRole("superadmin"))
                        {
                            <text>Administra usuarios de todo el sistema</text>
                        }
                        else
                        {
                            <text>Administra los usuarios de tu sucursal</text>
                        }
                    </p>
                </div>
                <div>
                    <a href="@Url.Action("Create", "UserManagement")" class="btn btn-primary">
                        <i class="fas fa-user-plus me-1"></i>
                        Nuevo Usuario
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Mensajes -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Tabla de Usuarios -->
    <div class="card shadow">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-list me-2"></i>
                Lista de Usuarios (@Model.Count())
            </h6>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                        <thead class="table-light">
                            <tr>
                                <th>Usuario</th>
                                <th>Rol</th>
                                <th>Sucursal</th>
                                <th>Estado</th>
                                <th>Fecha Creación</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0">
                                                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                    <i class="fas fa-user text-white"></i>
                                                </div>
                                            </div>
                                            <div class="flex-grow-1 ms-3">
                                                <div class="fw-bold">@user.FullName</div>
                                                <div class="text-muted small">@user.Email</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @switch (user.Role)
                                        {
                                            case RestBar.Models.UserRole.admin:
                                                <span class="badge bg-danger">Administrador</span>
                                                break;
                                            case RestBar.Models.UserRole.manager:
                                                <span class="badge bg-warning text-dark">Gerente</span>
                                                break;
                                            case RestBar.Models.UserRole.supervisor:
                                                <span class="badge bg-info">Supervisor</span>
                                                break;
                                            case RestBar.Models.UserRole.waiter:
                                                <span class="badge bg-success">Mesero</span>
                                                break;
                                            case RestBar.Models.UserRole.cashier:
                                                <span class="badge bg-primary">Cajero</span>
                                                break;
                                            case RestBar.Models.UserRole.chef:
                                                <span class="badge bg-secondary">Cocinero</span>
                                                break;
                                            case RestBar.Models.UserRole.bartender:
                                                <span class="badge bg-dark">Bartender</span>
                                                break;
                                            case RestBar.Models.UserRole.accountant:
                                                <span class="badge bg-light text-dark">Contador</span>
                                                break;
                                            case RestBar.Models.UserRole.support:
                                                <span class="badge bg-muted">Soporte</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@user.Role</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (user.Branch != null)
                                        {
                                            <div>
                                                <div class="fw-bold small">@user.Branch.Name</div>
                                                @if (user.Branch.Company != null)
                                                {
                                                    <div class="text-muted" style="font-size: 11px;">
                                                        @user.Branch.Company.Name
                                                    </div>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Sin sucursal</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>
                                                Activo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times me-1"></i>
                                                Inactivo
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            @user.CreatedAt.ToString("dd/MM/yyyy")
                                        </small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-outline-primary" title="Ver detalles" onclick="viewUser('@user.Id')">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-warning" title="Editar" onclick="editUser('@user.Id')">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            @if (user.IsActive)
                                            {
                                                <button type="button" class="btn btn-sm btn-outline-danger" title="Desactivar" onclick="toggleUser('@user.Id', false)">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-sm btn-outline-success" title="Activar" onclick="toggleUser('@user.Id', true)">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-users fa-4x text-muted mb-4"></i>
                    <h4 class="text-muted">No hay usuarios registrados</h4>
                    <p class="text-muted mb-4">Comienza creando el primer usuario de tu sucursal</p>
                    <a href="@Url.Action("Create", "UserManagement")" class="btn btn-primary btn-lg">
                        <i class="fas fa-user-plus me-2"></i>
                        Crear Primer Usuario
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function viewUser(userId) {
            console.log('Ver usuario:', userId);
            alert('Función de ver detalles en desarrollo');
        }

        function editUser(userId) {
            window.location.href = '@Url.Action("Edit", "UserManagement")' + '?id=' + userId;
        }

        function toggleUser(userId, activate) {
            const action = activate ? 'activar' : 'desactivar';
            if (confirm(`¿Estás seguro de que quieres ${action} este usuario?`)) {
                console.log('Cambiar estado de usuario:', userId, activate);
                alert('Función de cambio de estado en desarrollo');
            }
        }

        // Auto-hide alerts después de 5 segundos
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    if (alert.parentNode) {
                        alert.remove();
                    }
                }, 5000);
            });
        });
    </script>
}
