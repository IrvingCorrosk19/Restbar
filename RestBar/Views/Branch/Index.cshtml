@model IEnumerable<RestBar.Models.Branch>
@using System.Globalization
@{
    ViewData["Title"] = "Sucursales";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content">
        <div class="hero-text">
            <h1 class="hero-title">
                <i class="fas fa-store-alt hero-icon"></i>
                Gestión de Sucursales
            </h1>
            <p class="hero-description">
                Administra las sucursales de tu empresa de forma eficiente y organizada
            </p>
        </div>
        <div class="hero-actions">
            <button class="btn btn-primary btn-lg modern-btn" data-bs-toggle="modal" data-bs-target="#createBranchModal">
                <i class="fas fa-plus me-2"></i>
                Nueva Sucursal
            </button>
        </div>
    </div>
    <div class="hero-decoration">
        <div class="decoration-circle circle-1"></div>
        <div class="decoration-circle circle-2"></div>
        <div class="decoration-circle circle-3"></div>
    </div>
</section>

<!-- Content Section -->
<section class="content-section">
    <div class="container-fluid">
        <!-- Filters Section -->
        <div class="filters-section">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="search-box">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" id="searchBranchInput" class="form-control search-input" placeholder="Buscar sucursal...">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="filter-box">
                        <i class="fas fa-filter filter-icon"></i>
                        <select id="statusFilter" class="form-select filter-select">
                            <option value="">Todos los estados</option>
                            <option value="true">Activa</option>
                            <option value="false">Inactiva</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-outline-primary modern-btn" onclick="clearFilters()">
                            <i class="fas fa-eraser me-2"></i>
                            Limpiar Filtros
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Branches Grid -->
        <div class="content-grid">
            <div class="row g-4" id="branchesGrid">
                @foreach (var branch in Model)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
                        <div class="modern-card branch-card-item">
                            <div class="card-header-modern">
                                <div class="branch-icon">
                                    <i class="fas fa-store-alt"></i>
                                </div>
                                <div class="branch-info">
                                    <h5 class="branch-name">@branch.Name</h5>
                                    <span class="branch-company">@(branch.Company?.Name ?? "Sin compañía")</span>
                                </div>
                                <div class="status-badge">
                                    <span class="badge @(branch.IsActive == true ? "badge-success" : "badge-danger")">
                                        @(branch.IsActive == true ? "Activa" : "Inactiva")
                                    </span>
                                </div>
                            </div>
                            <div class="card-body-modern">
                                <div class="branch-details">
                                    <div class="detail-item">
                                        <i class="fas fa-map-marker-alt detail-icon"></i>
                                        <div class="detail-content">
                                            <span class="detail-label">Dirección</span>
                                            <span class="detail-value">@(!string.IsNullOrWhiteSpace(branch.Address) ? branch.Address : "Sin dirección")</span>
                                        </div>
                                    </div>
                                    <div class="detail-item">
                                        <i class="fas fa-phone detail-icon"></i>
                                        <div class="detail-content">
                                            <span class="detail-label">Teléfono</span>
                                            <span class="detail-value">@(!string.IsNullOrWhiteSpace(branch.Phone) ? branch.Phone : "Sin teléfono")</span>
                                        </div>
                                    </div>
                                    <div class="detail-item">
                                        <i class="fas fa-building detail-icon"></i>
                                        <div class="detail-content">
                                            <span class="detail-label">Compañía</span>
                                            <span class="detail-value">@(branch.Company?.Name ?? "Sin compañía")</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer-modern">
                                <button class="btn btn-outline-primary btn-sm modern-btn-sm" onclick="editBranch('@branch.Id')" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-outline-danger btn-sm modern-btn-sm" onclick="deleteBranch('@branch.Id')" title="Eliminar">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Empty State -->
        <div class="empty-state" id="emptyState" style="display: none;">
            <div class="empty-icon">
                <i class="fas fa-store-alt"></i>
            </div>
            <h3 class="empty-title">No se encontraron sucursales</h3>
            <p class="empty-description">Prueba ajustando los filtros de búsqueda o crea una nueva sucursal</p>
            <button class="btn btn-primary modern-btn" data-bs-toggle="modal" data-bs-target="#createBranchModal">
                <i class="fas fa-plus me-2"></i>
                Crear Primera Sucursal
            </button>
        </div>
    </div>
</section>

<!-- Modal de Creación -->
<div class="modal fade" id="createBranchModal" tabindex="-1" aria-labelledby="createBranchModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content modern-modal">
            <div class="modal-header modern-modal-header">
                <div class="modal-title-section">
                    <div class="modal-icon">
                        <i class="fas fa-store-alt"></i>
                    </div>
                    <div>
                        <h5 class="modal-title" id="createBranchModalLabel">Nueva Sucursal</h5>
                        <p class="modal-subtitle">Crea una nueva sucursal en el sistema</p>
                    </div>
                </div>
                <button type="button" class="btn-close modern-btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="createBranchForm">
                <div class="modal-body modern-modal-body">
                    <div class="row g-3">
                        <div class="col-md-12">
                            <div class="modern-form-group">
                                <label class="form-label">
                                    <i class="fas fa-building me-2"></i>
                                    Compañía *
                                </label>
                                <select class="form-select modern-select" name="CompanyId" id="createCompanyId" required>
                                    <option value="">Cargando compañías...</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="modern-form-group">
                                <label class="form-label">
                                    <i class="fas fa-store-alt me-2"></i>
                                    Nombre de la Sucursal *
                                </label>
                                <input type="text" class="form-control modern-input" name="Name" required 
                                       placeholder="Ingresa el nombre de la sucursal">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="modern-form-group">
                                <label class="form-label">
                                    <i class="fas fa-map-marker-alt me-2"></i>
                                    Dirección
                                </label>
                                <input type="text" class="form-control modern-input" name="Address" 
                                       placeholder="Ingresa la dirección de la sucursal">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="modern-form-group">
                                <label class="form-label">
                                    <i class="fas fa-phone me-2"></i>
                                    Teléfono
                                </label>
                                <input type="text" class="form-control modern-input" name="Phone" 
                                       placeholder="Ingresa el número de teléfono">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="modern-form-group">
                                <div class="form-check modern-check">
                                    <input type="checkbox" class="form-check-input" name="IsActive" checked>
                                    <label class="form-check-label">
                                        <i class="fas fa-check-circle me-2"></i>
                                        Sucursal Activa
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer modern-modal-footer">
                    <button type="button" class="btn btn-outline-secondary modern-btn" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>
                        Cancelar
                    </button>
                    <button type="button" class="btn btn-primary modern-btn" onclick="createBranch()">
                        <i class="fas fa-save me-2"></i>
                        Crear Sucursal
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal de Edición -->
<div class="modal fade" id="editBranchModal" tabindex="-1" aria-labelledby="editBranchModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content modern-modal">
            <div class="modal-header modern-modal-header">
                <div class="modal-title-section">
                    <div class="modal-icon">
                        <i class="fas fa-edit"></i>
                    </div>
                    <div>
                        <h5 class="modal-title" id="editBranchModalLabel">Editar Sucursal</h5>
                        <p class="modal-subtitle">Modifica la información de la sucursal</p>
                    </div>
                </div>
                <button type="button" class="btn-close modern-btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editBranchForm">
                <div class="modal-body modern-modal-body">
                    <input type="hidden" name="Id">
                    <div class="row g-3">
                        <div class="col-md-12">
                            <div class="modern-form-group">
                                <label class="form-label">
                                    <i class="fas fa-building me-2"></i>
                                    Compañía *
                                </label>
                                <select class="form-select modern-select" name="CompanyId" id="editCompanyId" required>
                                    <option value="">Cargando compañías...</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="modern-form-group">
                                <label class="form-label">
                                    <i class="fas fa-store-alt me-2"></i>
                                    Nombre de la Sucursal *
                                </label>
                                <input type="text" class="form-control modern-input" name="Name" required 
                                       placeholder="Ingresa el nombre de la sucursal">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="modern-form-group">
                                <label class="form-label">
                                    <i class="fas fa-map-marker-alt me-2"></i>
                                    Dirección
                                </label>
                                <input type="text" class="form-control modern-input" name="Address" 
                                       placeholder="Ingresa la dirección de la sucursal">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="modern-form-group">
                                <label class="form-label">
                                    <i class="fas fa-phone me-2"></i>
                                    Teléfono
                                </label>
                                <input type="text" class="form-control modern-input" name="Phone" 
                                       placeholder="Ingresa el número de teléfono">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="modern-form-group">
                                <div class="form-check modern-check">
                                    <input type="checkbox" class="form-check-input" name="IsActive">
                                    <label class="form-check-label">
                                        <i class="fas fa-check-circle me-2"></i>
                                        Sucursal Activa
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer modern-modal-footer">
                    <button type="button" class="btn btn-outline-secondary modern-btn" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>
                        Cancelar
                    </button>
                    <button type="button" class="btn btn-primary modern-btn" onclick="updateBranch()">
                        <i class="fas fa-save me-2"></i>
                        Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Función para limpiar filtros
        function clearFilters() {
            $("#searchBranchInput").val("");
            $("#statusFilter").val("");
            filterBranches();
        }

        // Función para actualizar estado vacío
        function updateEmptyState() {
            const visibleCards = $("#branchesGrid .col:visible").length;
            if (visibleCards === 0) {
                $("#emptyState").show();
            } else {
                $("#emptyState").hide();
            }
        }

        // Función para filtrar sucursales
        function filterBranches() {
            const searchTerm = $('#searchBranchInput').val().toLowerCase();
            const status = $('#statusFilter').val();
            
            $('#branchesGrid .col').each(function () {
                const card = $(this);
                const name = card.find('.branch-name').text().toLowerCase();
                const isActive = card.find('.badge-success').length > 0;
                
                const matchesSearch = name.includes(searchTerm);
                const matchesStatus = status === '' || (status === 'true' && isActive) || (status === 'false' && !isActive);
                
                card.toggle(matchesSearch && matchesStatus);
            });
            
            updateEmptyState();
        }

        // Función para cargar compañías en selects
        function loadCompaniesSelect(selectId, selectedId) {
            var select = $(selectId);
            select.empty().append('<option value="">Cargando compañías...</option>').prop('disabled', true);
            
            $.get('/Company/GetCompanies', function (res) {
                if (res.success) {
                    select.empty();
                    select.append('<option value="">Seleccione una compañía</option>');
                    res.data.forEach(function (c) {
                        var option = $('<option value="' + c.id + '">' + c.name + '</option>');
                        if (selectedId && c.id === selectedId) {
                            option.prop('selected', true);
                        }
                        select.append(option);
                    });
                    select.prop('disabled', false);
                    
                    // Forzar actualización del valor seleccionado
                    if (selectedId) {
                        select.val(selectedId);
                        select.trigger('change');
                    }
                    
                    if (selectId === '#createCompanyId') {
                        $('#createBranchModal').find('button.btn-primary').prop('disabled', false);
                    }
                } else {
                    select.empty().append('<option value="">No hay compañías disponibles</option>').prop('disabled', true);
                }
            }).fail(function() {
                select.empty().append('<option value="">Error al cargar compañías</option>').prop('disabled', true);
            });
        }

        // Eventos
        $(document).ready(function () {
            $('#searchBranchInput').on('keyup', filterBranches);
            $('#statusFilter').on('change', filterBranches);
            updateEmptyState();
        });

        // Eventos de modales
        $('#createBranchModal').on('show.bs.modal', function () {
            var select = $('#createCompanyId');
            var btn = $(this).find('button.btn-primary');
            select.empty().append('<option>Cargando compañías...</option>').prop('disabled', true);
            btn.prop('disabled', true);
            loadCompaniesSelect('#createCompanyId');
            select.val('');
        });

        // Evento eliminado - la carga de compañías se maneja en editBranch()

        // Función para crear sucursal
        window.createBranch = function () {
            const form = $('#createBranchForm');
            const formData = {};
            let errors = [];
            
            form.serializeArray().forEach(item => {
                formData[item.name] = item.value;
            });
            formData.IsActive = form.find('[name="IsActive"]').is(':checked');
            
            // Validaciones
            if (!formData.Name || formData.Name.trim() === "") {
                errors.push('El nombre es requerido');
            }
            if (!formData.CompanyId) {
                errors.push('La compañía es requerida');
            }
            
            if (errors.length > 0) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error de validación',
                    html: errors.join('<br>')
                });
                return;
            }
            
            Swal.fire({
                title: 'Creando sucursal...',
                text: 'Por favor espera un momento',
                icon: 'info',
                allowOutsideClick: false,
                showConfirmButton: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });
            
            $.ajax({
                url: '/Branch/Create',
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(formData),
                success: function (response) {
                    if (response.success) {
                        $('#createBranchModal').modal('hide');
                        Swal.fire({
                            icon: 'success',
                            title: '¡Éxito!',
                            text: '¡Sucursal creada correctamente!',
                            showConfirmButton: false,
                            timer: 1500
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message || 'No se pudo crear la sucursal'
                        });
                    }
                },
                error: function (xhr, status, error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'No se pudo crear la sucursal. Por favor intenta nuevamente.'
                    });
                }
            });
        }

        // Función para editar sucursal
        window.editBranch = function (id) {
            Swal.fire({
                title: 'Cargando información...',
                text: 'Por favor espera un momento',
                icon: 'info',
                allowOutsideClick: false,
                showConfirmButton: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });
            
            $.ajax({
                url: `/Branch/Get/${id}`,
                method: 'GET',
                success: function (response) {
                    if (response.success) {
                        const branch = response.data;
                        const form = $('#editBranchForm');
                        
                        // Limpiar y llenar el formulario
                        form[0].reset();
                        form.find('[name="Id"]').val(branch.id);
                        form.find('[name="Name"]').val(branch.name);
                        form.find('[name="Address"]').val(branch.address || '');
                        form.find('[name="Phone"]').val(branch.phone || '');
                        form.find('[name="IsActive"]').prop('checked', branch.isActive);
                        
                        // Cargar compañías y establecer la seleccionada
                        loadCompaniesSelect('#editCompanyId', branch.companyId);
                        
                        // Cerrar el loading y mostrar el modal
                        Swal.close();
                        const editModal = new bootstrap.Modal(document.getElementById('editBranchModal'));
                        editModal.show();
                    } else {
                        Swal.close();
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message || 'Error al cargar la sucursal'
                        });
                    }
                },
                error: function (xhr, status, error) {
                    Swal.close();
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Error al cargar la sucursal. Por favor intenta nuevamente.'
                    });
                }
            });
        }

        // Función para actualizar sucursal
        window.updateBranch = function () {
            const form = $('#editBranchForm');
            const formData = {};
            let errors = [];
            
            form.serializeArray().forEach(item => {
                formData[item.name] = item.value;
            });
            formData.IsActive = form.find('[name="IsActive"]').is(':checked');
            
            // Validaciones
            if (!formData.Name || formData.Name.trim() === "") {
                errors.push('El nombre es requerido');
            }
            if (!formData.CompanyId) {
                errors.push('La compañía es requerida');
            }
            
            if (errors.length > 0) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error de validación',
                    html: errors.join('<br>')
                });
                return;
            }
            
            Swal.fire({
                title: 'Actualizando sucursal...',
                text: 'Por favor espera un momento',
                icon: 'info',
                allowOutsideClick: false,
                showConfirmButton: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });
            
            $.ajax({
                url: `/Branch/Edit/${formData.Id}`,
                method: 'PUT',
                contentType: 'application/json',
                data: JSON.stringify(formData),
                success: function (response) {
                    if (response.success) {
                        $('#editBranchModal').modal('hide');
                        Swal.fire({
                            icon: 'success',
                            title: '¡Éxito!',
                            text: '¡Sucursal editada correctamente!',
                            showConfirmButton: false,
                            timer: 1500
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message || 'Error al actualizar la sucursal'
                        });
                    }
                },
                error: function (xhr, status, error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Error al actualizar la sucursal. Por favor intenta nuevamente.'
                    });
                }
            });
        }

        // Función para eliminar sucursal
        window.deleteBranch = function (id) {
            Swal.fire({
                title: '¿Estás seguro?',
                text: 'Esta acción eliminará la sucursal permanentemente',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: 'var(--danger-color)',
                cancelButtonColor: 'var(--secondary-color)',
                confirmButtonText: '<i class="fas fa-trash me-2"></i>Sí, eliminar',
                cancelButtonText: '<i class="fas fa-times me-2"></i>Cancelar',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Eliminando sucursal...',
                        text: 'Por favor espera un momento',
                        icon: 'info',
                        allowOutsideClick: false,
                        showConfirmButton: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });
                    
                    $.ajax({
                        url: `/Branch/Delete/${id}`,
                        method: 'DELETE',
                        success: function (response) {
                            if (response.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: '¡Eliminada!',
                                    text: '¡Sucursal eliminada correctamente!',
                                    showConfirmButton: false,
                                    timer: 1500
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: response.message || 'No se pudo eliminar la sucursal'
                                });
                            }
                        },
                        error: function (xhr, status, error) {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'Error al eliminar la sucursal. Por favor intenta nuevamente.'
                            });
                        }
                    });
                }
            });
        }
    </script>
}

@section Styles {
    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #34495e;
            --accent-color: #e67e22;
            --success-color: #27ae60;
            --danger-color: #e74c3c;
            --warning-color: #f39c12;
            --info-color: #3498db;
            --light-color: #ecf0f1;
            --dark-color: #2c3e50;
            --border-radius: 20px;
            --transition: all 0.3s ease;
            --box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            --hover-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            line-height: 1.6;
        }

        /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            padding: 80px 0;
            position: relative;
            overflow: hidden;
        }

        .hero-content {
            container: 1200px;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
            z-index: 2;
        }

        .hero-text h1 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
        }

        .hero-icon {
            background: linear-gradient(45deg, var(--accent-color), var(--warning-color));
