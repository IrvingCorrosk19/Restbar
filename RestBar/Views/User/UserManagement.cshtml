    const companyId = this.value;
    
    
    // Limpiar sucursales actuales
    branches = [];
    populateBranchSelects();
    
    // Cargar sucursales de la compañía seleccionada
    if (companyId) {
        loadBranches(companyId);
    } else {
        // Si no hay compañía seleccionada, limpiar las sucursales
        branches = [];
        populateBranchSelects();
    }
    
    // Aplicar filtros
    applyFilters();
});

