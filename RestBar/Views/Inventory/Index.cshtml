@{
    ViewData["Title"] = "Gestión de Inventario";
    Layout = "_Layout";
}

<style>
    .inventory-hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 3rem 2rem;
        border-radius: 20px;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        color: white;
    }
    
    .inventory-container {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    
    .stock-alert {
        background: #fff3cd;
        border-left: 4px solid #ffc107;
        padding: 1rem;
        margin-bottom: 1rem;
        border-radius: 8px;
    }
    
    .stock-alert.critical {
        background: #f8d7da;
        border-left-color: #dc3545;
    }
    
    .consumption-card {
        border: 1px solid #e0e0e0;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        transition: all 0.3s ease;
    }
    
    .consumption-card:hover {
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transform: translateY(-2px);
    }
</style>

<!-- Hero Section -->
<div class="inventory-hero">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-boxes"></i> Gestión de Inventario</h1>
            <p class="mb-0">Monitoreo de stock, alertas y reportes de consumo</p>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="inventory-container">
    <!-- Alerts Section -->
    <div class="mb-4">
        <h3><i class="fas fa-exclamation-triangle"></i> Productos con Stock Bajo</h3>
        <div id="lowStockAlerts">
            <div class="text-center text-muted">
                <i class="fas fa-spinner fa-spin"></i> Cargando alertas...
            </div>
        </div>
    </div>

    <!-- Consumption Report Section -->
    <div class="mb-4">
        <h3><i class="fas fa-chart-bar"></i> Reporte de Consumo</h3>
        
        <!-- Filters -->
        <div class="card mb-3">
            <div class="card-header bg-light">
                <h5 class="mb-0">Filtros</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Fecha Inicio</label>
                        <input type="date" class="form-control" id="startDate" value="@DateTime.Today.AddDays(-30).ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Fecha Fin</label>
                        <input type="date" class="form-control" id="endDate" value="@DateTime.Today.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Producto</label>
                        <select class="form-select" id="productFilter">
                            <option value="">Todos los productos</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Estación</label>
                        <select class="form-select" id="stationFilter">
                            <option value="">Todas las estaciones</option>
                        </select>
                    </div>
                    <div class="col-md-12">
                        <button class="btn btn-primary" onclick="loadConsumptionReport()">
                            <i class="fas fa-search"></i> Generar Reporte
                        </button>
                        <button class="btn btn-secondary" onclick="exportConsumptionReport()">
                            <i class="fas fa-download"></i> Exportar
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Report Results -->
        <div id="consumptionReport">
            <div class="text-center text-muted">
                <p>Selecciona filtros y haz clic en "Generar Reporte"</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/inventory/inventory-management.js"></script>
}

