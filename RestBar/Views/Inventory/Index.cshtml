@model RestBar.Controllers.InventoryViewModel
@{
    ViewData["Title"] = "Gestión de Inventario";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/inventory.css" />
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-boxes me-2"></i>Gestión de Inventario
                        </h4>
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-light btn-sm me-2" onclick="openCreateProductModal()">
                                <i class="fas fa-plus me-1"></i>Nuevo Producto
                            </button>
                            <button type="button" class="btn btn-light btn-sm me-2" onclick="openCreateCategoryModal()">
                                <i class="fas fa-tags me-1"></i>Nueva Categoría
                            </button>
                            <button type="button" class="btn btn-light btn-sm me-2" onclick="openCreateBranchModal()">
                                <i class="fas fa-store me-1"></i>Nueva Sucursal
                            </button>
                            <button type="button" class="btn btn-light btn-sm me-2" onclick="openMovementModal()">
                                <i class="fas fa-exchange-alt me-1"></i>Movimiento
                            </button>
                                                         <button type="button" class="btn btn-light btn-sm" onclick="checkDatabaseData()">
                                 <i class="fas fa-database me-1"></i>Verificar Datos
                             </button>
                             <button type="button" class="btn btn-info btn-sm" onclick="getMovementsByType('purchase')">
                                 <i class="fas fa-shopping-cart me-1"></i>Compras
                             </button>
                             <button type="button" class="btn btn-warning btn-sm" onclick="getMovementsByType('sale')">
                                 <i class="fas fa-cash-register me-1"></i>Ventas
                             </button>
                             <button type="button" class="btn btn-secondary btn-sm" onclick="getMovementsByType('adjustment')">
                                 <i class="fas fa-tools me-1"></i>Ajustes
                             </button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Alertas de bajo stock -->
                    <div id="lowStockAlerts" class="mb-4" style="display: none;">
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <h5 class="alert-heading">
                                <i class="fas fa-exclamation-triangle me-2"></i>Productos con Bajo Stock
                            </h5>
                            <div id="lowStockItemsList"></div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    </div>

                    <!-- Filtros -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <label for="branchFilter" class="form-label">Sucursal</label>
                            <select id="branchFilter" class="form-select">
                                <option value="">Todas las sucursales</option>
                                @foreach (var branch in Model.Branches)
                                {
                                    <option value="@branch.Id">@branch.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="categoryFilter" class="form-label">Categoría</label>
                            <select id="categoryFilter" class="form-select">
                                <option value="">Todas las categorías</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="stockFilter" class="form-label">Estado de Stock</label>
                            <select id="stockFilter" class="form-select">
                                <option value="">Todos</option>
                                <option value="low">Bajo Stock</option>
                                <option value="out">Sin Stock</option>
                                <option value="normal">Stock Normal</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="searchProduct" class="form-label">Buscar Producto</label>
                            <input type="text" id="searchProduct" class="form-control" placeholder="Nombre del producto...">
                        </div>
                    </div>

                    <!-- Tabla de inventario -->
                    <div class="table-responsive">
                        <table id="inventoryTable" class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Producto</th>
                                    <th>Categoría</th>
                                    <th>Sucursal</th>
                                    <th>Stock Actual</th>
                                    <th>Stock Mínimo</th>
                                    <th>Estado</th>
                                    <th>Última Actualización</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="inventoryTableBody">
                                <!-- Los datos se cargarán dinámicamente -->
                            </tbody>
                        </table>
                    </div>

                    <!-- Paginación -->
                    <nav aria-label="Navegación de inventario">
                        <ul class="pagination justify-content-center" id="inventoryPagination">
                            <!-- Paginación dinámica -->
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para actualizar stock -->
<div class="modal fade" id="updateStockModal" tabindex="-1" aria-labelledby="updateStockModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="updateStockModalLabel">
                    <i class="fas fa-edit me-2"></i>Actualizar Stock
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="updateStockForm">
                    <input type="hidden" id="updateProductId">
                    <input type="hidden" id="updateBranchId">
                    
                    <div class="mb-3">
                        <label for="productNameDisplay" class="form-label">Producto</label>
                        <input type="text" id="productNameDisplay" class="form-control" readonly>
                    </div>
                    
                    <div class="mb-3">
                        <label for="branchNameDisplay" class="form-label">Sucursal</label>
                        <input type="text" id="branchNameDisplay" class="form-control" readonly>
                    </div>
                    
                    <div class="mb-3">
                        <label for="currentStockDisplay" class="form-label">Stock Actual</label>
                        <input type="text" id="currentStockDisplay" class="form-control" readonly>
                    </div>
                    
                    <div class="mb-3">
                        <label for="newStockQuantity" class="form-label">Nuevo Stock</label>
                        <input type="number" id="newStockQuantity" class="form-control" min="0" step="0.01" required>
                        <div class="form-text">Ingrese la nueva cantidad de stock</div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="stockReason" class="form-label">Motivo del Cambio</label>
                        <textarea id="stockReason" class="form-control" rows="3" placeholder="Describa el motivo del cambio de stock..."></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-primary" id="saveStockUpdate">
                    <i class="fas fa-save me-1"></i>Guardar Cambios
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para ver historial de cambios -->
<div class="modal fade" id="stockHistoryModal" tabindex="-1" aria-labelledby="stockHistoryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="stockHistoryModalLabel">
                    <i class="fas fa-history me-2"></i>Historial de Cambios
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="stockHistoryContent">
                    <!-- El historial se cargará dinámicamente -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cerrar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para crear producto -->
<div class="modal fade" id="createProductModal" tabindex="-1" aria-labelledby="createProductModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="createProductModalLabel">
                    <i class="fas fa-plus me-2"></i>Crear Nuevo Producto
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createProductForm">
                    <div class="mb-3">
                        <label for="productName" class="form-label">Nombre del Producto</label>
                        <input type="text" id="productName" class="form-control" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="productDescription" class="form-label">Descripción</label>
                        <textarea id="productDescription" class="form-control" rows="3"></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label for="productCategory" class="form-label">Categoría</label>
                        <select id="productCategory" class="form-select" required>
                            <option value="">Seleccionar categoría</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="productPrice" class="form-label">Precio</label>
                        <input type="number" id="productPrice" class="form-control" min="0" step="0.01" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="productUnitCost" class="form-label">Costo Unitario</label>
                        <input type="number" id="productUnitCost" class="form-control" min="0" step="0.01" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-success" id="saveProduct">
                    <i class="fas fa-save me-1"></i>Crear Producto
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para crear categoría -->
<div class="modal fade" id="createCategoryModal" tabindex="-1" aria-labelledby="createCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="createCategoryModalLabel">
                    <i class="fas fa-tags me-2"></i>Crear Nueva Categoría
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createCategoryForm">
                    <div class="mb-3">
                        <label for="categoryName" class="form-label">Nombre de la Categoría</label>
                        <input type="text" id="categoryName" class="form-control" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="categoryDescription" class="form-label">Descripción</label>
                        <textarea id="categoryDescription" class="form-control" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-info" id="saveCategory">
                    <i class="fas fa-save me-1"></i>Crear Categoría
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para crear sucursal -->
<div class="modal fade" id="createBranchModal" tabindex="-1" aria-labelledby="createBranchModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="createBranchModalLabel">
                    <i class="fas fa-store me-2"></i>Crear Nueva Sucursal
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createBranchForm">
                    <div class="mb-3">
                        <label for="branchName" class="form-label">Nombre de la Sucursal</label>
                        <input type="text" id="branchName" class="form-control" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="branchAddress" class="form-label">Dirección</label>
                        <textarea id="branchAddress" class="form-control" rows="2"></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label for="branchPhone" class="form-label">Teléfono</label>
                        <input type="text" id="branchPhone" class="form-control">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-warning" id="saveBranch">
                    <i class="fas fa-save me-1"></i>Crear Sucursal
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para movimientos de inventario -->
<div class="modal fade" id="movementModal" tabindex="-1" aria-labelledby="movementModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="movementModalLabel">
                    <i class="fas fa-exchange-alt me-2"></i>Movimiento de Inventario
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="movementForm">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="movementProduct" class="form-label">Producto</label>
                                <select id="movementProduct" class="form-select" required>
                                    <option value="">Seleccionar producto</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="movementBranch" class="form-label">Sucursal</label>
                                <select id="movementBranch" class="form-select" required>
                                    <option value="">Seleccionar sucursal</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="movementType" class="form-label">Tipo de Movimiento</label>
                                <select id="movementType" class="form-select" required>
                                    <option value="">Seleccionar tipo</option>
                                    <option value="purchase">Compra</option>
                                    <option value="sale">Venta</option>
                                    <option value="adjustment">Ajuste</option>
                                    <option value="waste">Pérdida</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="movementQuantity" class="form-label">Cantidad</label>
                                <input type="number" id="movementQuantity" class="form-control" min="0" step="0.01" required>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="movementUnitCost" class="form-label">Costo Unitario</label>
                                <input type="number" id="movementUnitCost" class="form-control" min="0" step="0.01">
                                <div class="form-text">Solo para compras</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="movementReason" class="form-label">Motivo</label>
                                <input type="text" id="movementReason" class="form-control">
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="movementReference" class="form-label">Referencia</label>
                        <input type="text" id="movementReference" class="form-control" placeholder="Número de factura, orden, etc.">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-primary" id="saveMovement">
                    <i class="fas fa-save me-1"></i>Registrar Movimiento
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/inventory/inventory-management.js?v=@DateTime.Now.Ticks"></script>
    <script>
        // Configuración inicial
        document.addEventListener('DOMContentLoaded', function() {
            // Cargar datos iniciales
            loadInventoryData();
            
            // Configurar filtros
            setupFilters();
            
            // Cargar alertas de bajo stock
            loadLowStockAlerts();
            
            // Cargar datos para los modales
            loadModalData();
        });
    </script>
} 